<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_switch_root_rl"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:layout_centerVertical="true"
    android:background="@drawable/shape_flickr_buttons_bg"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/widget_switch_selected_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_recommend_button_selected_bg"
        android:visibility="invisible" />

    <View
        android:id="@+id/widget_switch_selected_right_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_recommend_button_selected_bg"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widget_switch_hot_btn"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_recommend_button_unselected_bg"
        android:gravity="center"
        android:text="趣推荐"
        android:textSize="@dimen/word_subhead_size" />

    <TextView
        android:id="@+id/widget_switch_new_btn"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_recommend_button_unselected_bg"
        android:gravity="center"
        android:text="趣发现"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/word_subhead_size" />

</RelativeLayout>


