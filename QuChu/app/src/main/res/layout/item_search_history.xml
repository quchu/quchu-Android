<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">

  <RelativeLayout
      android:id="@+id/search_item_content_layout"
      android:layout_width="match_parent"
      android:layout_height="44dp">

    <ImageView
        android:id="@+id/search_item_clock_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_clock"/>

    <TextView
        android:id="@+id/search_item_history_tv"
        style="@style/TextView.H2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/search_item_history_delete_btn"
        android:layout_toRightOf="@+id/search_item_clock_img"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="14sp"
        tools:text="类别"/>

    <ImageView
        android:id="@+id/search_item_history_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="24dp"
        android:src="@drawable/ic_searchcancel"/>

    <TextView
        android:id="@+id/search_item_history_null_tv"
        style="@style/TextView.H2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/standard_color_white"
        android:gravity="center"
        android:text="无历史记录"
        android:visibility="invisible"/>

  </RelativeLayout>

  <View
      android:id="@+id/search_item_history_divider"
      style="@style/HorizontalDivider"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>

</LinearLayout>