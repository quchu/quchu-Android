<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/llDisplayMode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_item_size"
        android:background="@color/standard_color_white"
        android:gravity="center"
        >

        <RadioGroup
            android:id="@+id/rgDisplayMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbFavorites"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/capsule_scene_switch"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:drawablePadding="@dimen/quarter_margin"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:drawableLeft="@mipmap/ic_wodechangjing"
                android:text="常用场景"
                android:textStyle="bold"
                android:background="@drawable/bg_scene_switch"
                android:textColor="@color/color_selector_recommend_b_n_ltg" />

            <RadioButton
                android:id="@+id/rbAll"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_height="@dimen/capsule_scene_switch"
                android:button="@null"
                android:gravity="center"
                android:text="场景工坊"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:drawablePadding="@dimen/quarter_margin"
                android:drawableLeft="@mipmap/ic_changjinggongfang"
                android:textColor="@color/color_selector_recommend_b_n_ltg"

                />

        </RadioGroup>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/llPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvPageIndicatorCurrent"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/recommend_page_indicator_text_size" />

        <TextView
            android:id="@+id/tvPageIndicatorLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="@dimen/quarter_margin"
            android:paddingRight="@dimen/quarter_margin"
            android:text="of"
            android:textColor="@color/standard_color_h3_dark"
            android:textSize="@dimen/standard_text_size_h1" />

        <TextView
            android:id="@+id/tvPageIndicatorSize"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/recommend_page_indicator_text_size" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llPageIndicator"
        android:layout_below="@id/llDisplayMode"
        android:layout_marginTop="@dimen/double_margin"
        android:clickable="true"
        android:clipToPadding="false"
        android:onClick="onViewPagerClick"
        android:overScrollMode="always"
        app:singlePageFling="true"
        app:triggerOffset="0.1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGrid"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llPageIndicator"
        android:layout_below="@id/llDisplayMode"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:visibility="gone" />


    <co.quchu.quchu.widget.ErrorView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llDisplayMode"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlNodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_scene_placeholder" />

            <TextView
                android:id="@+id/tvEmptyView"
                style="@style/TextView.H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="咦？怎么什么都没有呀！" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
