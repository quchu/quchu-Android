<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/standard_color_yellow_label"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:elevation="0dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        >

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/standard_color_yellow_label"
          app:contentInsetStart="0dp"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          >

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_down"
            android:gravity="center_vertical"
            android:text="厦门"
            android:textColor="@color/standard_color_black"
            android:textSize="@dimen/standard_text_size_h2"
            />

        <co.quchu.quchu.widget.DrawerMenu
            android:id="@+id/vDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:id="@+id/vSearchBar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_lineframe_ai_search_bar"
            android:orientation="horizontal"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="16dp"
              android:drawableLeft="@mipmap/ic_pull_menus_search"
              android:drawablePadding="4dp"
              android:gravity="left|center_vertical"
              android:text="Welcome To A.I Research Lab"
              android:textColor="@color/colorHint"
              android:textSize="13sp"
              />

        </LinearLayout>

      </android.support.v7.widget.Toolbar>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvScene"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          app:layoutManager="android.support.v7.widget.GridLayoutManager"
          app:spanCount="4"
          tools:listitem="@layout/item_scene_list"
          />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/placeHolder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="0"
        android:background="@color/transparent"
        >

      <co.quchu.quchu.widget.DrawerMenu
          android:id="@+id/vFakeDrawer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="8dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="8dp"
          android:layout_toRightOf="@id/vFakeDrawer"
          android:gravity="center_vertical|right"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:scaleType="center"
            android:src="@mipmap/ic_fangdajing"
            />

        <ImageView
            android:id="@+id/ivAllScene"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:scaleType="center"
            android:src="@mipmap/ic_suoyouchangjing"
            />

        <ImageView
            android:id="@+id/ivSwitchCity"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="center"
            android:src="@mipmap/ic_location"
            />

      </LinearLayout>

    </RelativeLayout>

  </android.support.design.widget.AppBarLayout>

  <FrameLayout
      android:id="@+id/flContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >

  </FrameLayout>

  <co.quchu.quchu.widget.XiaoQFab
      android:id="@+id/fab"
      android:layout_width="42dp"
      android:layout_height="42dp"
      android:clickable="true"
      android:padding="1dp"
      app:backgroundTint="@android:color/transparent"
      app:elevation="0dp"
      app:fabSize="normal"
      app:layout_anchor="@id/appbar"
      app:layout_anchorGravity="bottom|center_horizontal"
      app:layout_behavior="co.quchu.quchu.widget.DisableAutoHideFABBehavior"
      app:useCompatPadding="true"
      />

</android.support.design.widget.CoordinatorLayout>
