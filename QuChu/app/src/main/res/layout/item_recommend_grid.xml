<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    fresco:cardPreventCornerOverlap="true"
    fresco:cardCornerRadius="@dimen/rounded_radius"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <com.facebook.drawee.view.SimpleDraweeView

        android:id="@+id/sdv"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImage="@mipmap/ic_image_empty"
        fresco:failureImageScaleType="center"
        fresco:placeholderImage="@mipmap/ic_image_empty"
        fresco:placeholderImageScaleType="center"
        fresco:roundedCornerRadius="@dimen/rounded_radius"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="left"
          android:shadowColor="@color/translucent_dark"
          android:shadowRadius="25"
          android:textColor="@color/standard_color_white"
          android:textSize="@dimen/standard_text_size_h1"
          android:textStyle="bold"
          tools:text="text"
          />

      <TextView
          android:id="@+id/tvDesc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin"
          android:layout_marginLeft="@dimen/base_margin"
          android:layout_marginRight="@dimen/base_margin"
          android:gravity="left"
          android:maxLines="2"
          android:paddingTop="@dimen/quarter_margin"
          android:shadowColor="@color/translucent_dark"
          android:shadowRadius="25"
          android:textColor="@color/standard_color_white"
          android:textSize="@dimen/standard_text_size_h2"
          android:visibility="gone"
          tools:text="text"
          />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/half_margin"
          android:gravity="left"
          android:orientation="horizontal"
          android:paddingTop="@dimen/quarter_margin"
          >


        <TextView
            android:id="@+id/recommend_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:shadowColor="@color/translucent_dark"
            android:shadowRadius="25"
            android:text="标签1"
            android:textColor="@color/standard_color_white"
            android:textSize="@dimen/standard_text_size_h2"
            tools:text="Tag"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/recommend_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:shadowColor="@color/translucent_dark"
            android:shadowRadius="25"
            android:textColor="@color/standard_color_white"
            android:textSize="@dimen/standard_text_size_h2"
            android:visibility="gone"
            tools:text="Tag"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/recommend_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:shadowColor="@color/translucent_dark"
            android:shadowRadius="25"
            android:textColor="@color/standard_color_white"
            android:textSize="@dimen/standard_text_size_h2"
            android:visibility="gone"
            tools:text="Tag"
            tools:visibility="visible"
            />

      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>

</android.support.v7.widget.CardView>
