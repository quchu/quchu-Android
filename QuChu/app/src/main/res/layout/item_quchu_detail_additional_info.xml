<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_icons_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/standard_color_white"
    android:layout_marginTop="@dimen/half_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_marginBottom="@dimen/quarter_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivParkingSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:layout_weight="1"
            android:src="@mipmap/ic_parking_slot"
            />

        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivPrivateRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:layout_weight="1"
            android:src="@mipmap/ic_private_room"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivDeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_diliver"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivParty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_party"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivAliCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_alicredit"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        style="@style/DetailHorizontalLine" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_cash"
            />

        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivVisaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_visacard"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivAlipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_alipay"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivWechatPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_wechatpay"
            />
        <View style="@style/DetailVerticalLine" />

        <ImageView
            android:id="@+id/ivApplePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:src="@mipmap/ic_applepay"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        style="@style/DetailHorizontalLine"
        />
</LinearLayout>