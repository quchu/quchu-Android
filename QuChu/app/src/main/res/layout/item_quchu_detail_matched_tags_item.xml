<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/tvName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/standard_color_h1_dark"
      android:background="@drawable/shape_lineframe_black_thin_rect"
      tools:text="标签"
      android:gravity="center"
      android:paddingTop="@dimen/quarter_margin"
      android:paddingBottom="@dimen/quarter_margin"
      android:layout_marginTop="@dimen/quarter_margin"
      android:layout_marginBottom="@dimen/quarter_margin"
      android:layout_marginLeft="@dimen/half_margin"
      android:layout_marginRight="@dimen/half_margin"
      android:textSize="12sp"
      />
</LinearLayout>