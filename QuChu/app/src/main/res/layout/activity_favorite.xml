<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <include
        android:id="@+id/favoriter_title_bar"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/favoriter_title_bar"
        android:background="@drawable/ic_activity_bg"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/detail_marginright"
            android:layout_marginTop="@dimen/base_margin"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/favorite_postcard_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/detail_card_bg_color"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/favorite_postcard_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:text="明信片"
                        android:textColor="@color/gene_textcolor_yellow"
                        android:textSize="@dimen/word_subhead_size" />

                    <co.quchu.quchu.widget.textcounter.CounterView
                        android:id="@+id/favorite_postcard_counter_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:textColor="@color/gene_textcolor_yellow"
                        android:textSize="@dimen/word_subhead_size"
                        card_view:autoStart="false"
                        card_view:incrementValue="1"
                        card_view:startValue="0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_toRightOf="@id/favorite_postcard_counter_cv" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/favorite_postcard_gvcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:layout_below="@id/favorite_postcard_name_tv"
                        android:layout_margin="@dimen/half_margin"
                        card_view:cardBackgroundColor="@color/titleBackground"
                        card_view:cardCornerRadius="8dp">

                        <GridView
                            android:id="@+id/favorite_postcard_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/half_margin"
                            android:clickable="false"
                            android:divider="#00000000"
                            android:gravity="center"
                            android:horizontalSpacing="8dp"
                            android:numColumns="3"
                            android:stretchMode="columnWidth" />
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/favorite_postcard_gvcv" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/favorite_place_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"

                card_view:cardBackgroundColor="@color/detail_card_bg_color"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/favorite_place_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:text="趣处"
                        android:textColor="@color/gene_textcolor_yellow"
                        android:textSize="@dimen/word_subhead_size" />

                    <co.quchu.quchu.widget.textcounter.CounterView
                        android:id="@+id/favorite_place_counter_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:textColor="@color/gene_textcolor_yellow"
                        android:textSize="@dimen/word_subhead_size"
                        card_view:autoStart="false"
                        card_view:incrementValue="1"
                        card_view:startValue="0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_toRightOf="@id/favorite_place_counter_cv" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/favorite_place_name_gvcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favorite_place_name_tv"
                        android:layout_margin="@dimen/half_margin"
                        android:clickable="false"
                        card_view:cardBackgroundColor="@color/titleBackground"
                        card_view:cardCornerRadius="8dp">

                        <GridView
                            android:id="@+id/favorite_place_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/half_margin"
                            android:clickable="false"
                            android:divider="#00000000"
                            android:gravity="center"
                            android:horizontalSpacing="8dp"
                            android:numColumns="3"
                            android:stretchMode="columnWidth" />
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/favorite_place_name_gvcv" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
