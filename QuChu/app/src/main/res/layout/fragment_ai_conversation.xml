<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:background="#f8f8f8"
    >

  <TextView
      android:id="@+id/tvPullUpToLoad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/standard_color_h2_dark"
      android:layout_marginTop="36dp"
      android:text="上拉加载更多"
      android:visibility="gone"
      android:layout_centerHorizontal="true"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  
  <ImageView
      android:id="@+id/ivGuide"
      android:layout_above="@+id/llOptions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:layout_marginLeft="@dimen/dialog_margin"
      android:src="@drawable/ic_conversation_guide"
      />

  <LinearLayout
      android:id="@+id/llOptions"
      android:layout_alignParentBottom="true"
      android:clipChildren="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvOptions"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
  </LinearLayout>

  <TextView
      android:id="@+id/tvOption"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:background="@drawable/shape_ai_txt_opt"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:textSize="12sp"
      android:visibility="invisible"
      android:text="Question Number 1"
      />


  <TextView
      android:id="@+id/quickReturn"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:text="滚"
      android:gravity="center"
      android:textColor="@color/standard_color_white"
      android:background="@android:color/holo_red_light"
      android:textSize="40sp"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="100dp"
      android:layout_centerHorizontal="true"

      />
</RelativeLayout>