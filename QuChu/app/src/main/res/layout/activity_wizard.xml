<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >


  <ImageView
      android:id="@+id/ivFemale"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/vAnchor"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/ic_women"
      />


  <ImageView
      android:id="@+id/ivMale"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/vAnchor"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/ic_men"

      />

  <ImageView
      android:id="@+id/ivLogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/vAnchor"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/ic_wizard_logo"
      tools:visibility="invisible"
      />


  <View
      android:id="@+id/vAnchor"
      android:layout_width="1dp"
      android:layout_height="1dp"
      android:layout_centerInParent="true"
      android:layout_marginTop="@dimen/double_margin"
      />


  <LinearLayout
      android:id="@+id/llTextArea"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/vAnchor"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:orientation="vertical"
      >


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margin"
        android:text="趣处助手"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="@dimen/standard_text_size_h1"

        />

    <View


        android:id="@+id/vBoldDivider"
        android:layout_width="@dimen/base_margin"
        android:layout_height="4dp"
        android:layout_margin="@dimen/base_margin"
        android:background="@color/standard_color_yellow"
        />


    <TextView


        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="趣处助手可以根据您平时的喜好\n主动寻找你喜欢的东西"
        android:textColor="@color/standard_color_h2_dark"
        android:textSize="@dimen/standard_text_size_h2"
        />
  </LinearLayout>


  <TextView
      android:id="@+id/tvNext"
      android:layout_width="200dp"
      android:layout_height="36dp"
      android:layout_below="@id/llTextArea"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/double_margin"
      android:background="@drawable/bg_rectangle_wireframe_yellow_fill"

      android:gravity="center"
      android:text="进入趣处"
      android:textColor="@color/standard_color_white"
      android:textSize="@dimen/standard_text_size_h2"
      />


</RelativeLayout>