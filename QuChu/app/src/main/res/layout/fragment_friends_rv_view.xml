<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/appBackground">

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_heigh"
        android:layout_below="@+id/title"
        android:animateLayoutChanges="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/search_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_search_quchu"
            android:text="@string/search"
            android:textSize="@dimen/word_size_body"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:textColor="@color/white"
            android:textColorHint="@color/translucent_white" />

    </RelativeLayout>

    <co.quchu.quchu.widget.DampView
        android:id="@+id/dampView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_firends_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always" />
    </co.quchu.quchu.widget.DampView>

    <co.quchu.quchu.widget.ErrorView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>

