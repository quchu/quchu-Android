<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/title"
        layout="@layout/layout_mai_title" />


    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_item_size"
        android:layout_below="@+id/title"
        android:animateLayoutChanges="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/search_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_margin"
            android:background="@drawable/shape_search_quchu"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:text="@string/search"
            android:textColor="@android:color/white"
            android:textColorHint="@color/translucent_white"
            android:textSize="@dimen/word_size_body" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@color/colorBackground" />
    <View
        android:id="@+id/ivGuideStep1Top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_heigh"
        android:background="@color/translucent_dark_deep"
        android:visibility="gone"
        />

    <View
        android:id="@+id/ivGuideStep1Bottom"
        android:layout_below="@id/ivGuideStep1Top"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_dark_deep"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivGuideStep1Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_guide_step_1"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@id/ivGuideStep1Top"
        />

    <View
        android:id="@+id/ivGuideStep2Top"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@color/translucent_dark_deep"
        android:visibility="gone"
        />

    <View
        android:id="@+id/vCover2Left"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivGuideStep2Top"
        android:layout_above="@+id/ivGuideStep2Bottom"
        android:background="@color/translucent_dark_deep"
        android:visibility="gone"
        />
    <View
        android:id="@+id/vCover2Right"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivGuideStep2Top"
        android:layout_above="@+id/ivGuideStep2Bottom"
        android:layout_alignParentRight="true"
        android:background="@color/translucent_dark_deep"
        android:visibility="gone"
        />

    <!--104 + 24 + imageHeight-->
    <View
        android:id="@+id/ivGuideStep2Bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_dark_deep"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivGuideStep2Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_guide_step_2"
        android:layout_alignTop="@+id/ivGuideStep2Bottom"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <View
        android:id="@+id/vEventReceiver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</RelativeLayout>
