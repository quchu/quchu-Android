<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

  <include
      android:id="@+id/title"
      layout="@layout/layout_mai_title"
      />


  <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/llTab"
      android:layout_below="@+id/title"
      android:background="@color/colorBackground"/>

  <RelativeLayout
      android:id="@+id/llTab"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_main_tab_bg"
        android:orientation="horizontal">

      <RadioButton
          android:id="@+id/rbRecommend"
          android:layout_width="match_parent"
          android:layout_height="@dimen/toolbar_item_size"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="1"
          android:button="@null"
          android:checked="true"
          android:drawableTop="@drawable/ic_qu_tuijian_selector"
          android:gravity="center"
          android:text="@string/qu_recommend"
          android:textColor="@color/color_selector_recommend_b_n_y"
          android:textSize="@dimen/standard_text_size_h4"/>

      <RadioButton
          android:id="@+id/rbDiscovery"
          android:layout_width="match_parent"
          android:layout_height="@dimen/toolbar_item_size"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="1"
          android:button="@null"
          android:drawableTop="@drawable/ic_qu_faxian_selecotr"
          android:gravity="center"
          android:text="@string/qu_discover"
          android:textColor="@color/color_selector_recommend_b_n_y"

          android:textSize="@dimen/standard_text_size_h4"/>

      <RadioButton
          android:id="@+id/rbSearch"
          android:layout_width="match_parent"
          android:layout_height="@dimen/toolbar_item_size"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="1"
          android:button="@null"
          android:drawableTop="@drawable/ic_qu_search_selecotr"
          android:gravity="center"
          android:text="@string/search"
          android:textColor="@color/color_selector_recommend_b_n_y"

          android:textSize="@dimen/standard_text_size_h4"/>


      <RadioButton
          android:id="@+id/rbMine"
          android:layout_width="match_parent"
          android:layout_height="@dimen/toolbar_item_size"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="1"
          android:button="@null"
          android:drawableTop="@drawable/ic_wode_selector"
          android:gravity="center"
          android:text="@string/mine"
          android:textColor="@color/color_selector_recommend_b_n_y"
          android:textSize="@dimen/standard_text_size_h4"/>

    </RadioGroup>

    <TextView
        android:id="@+id/unReadMassage"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/shape_round_red"
        android:textColor="@color/standard_color_white"
        android:visibility="invisible"/>

  </RelativeLayout>

</RelativeLayout>
