<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/cp_enhanced_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/standard_color_white"
        android:padding="@dimen/base_margin">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/base_margin"
            fresco:placeholderImage="@mipmap/avatar_2"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/headImage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_toRightOf="@id/headImage"
            android:singleLine="true"
            android:textColor="@color/standard_color_h2_dark"
            tools:text="我的手_做不到" />

        <TextView
            android:id="@+id/alias"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:background="@color/standard_color_red"
            android:gravity="center"
            android:paddingLeft="@dimen/half_margin"
            android:paddingRight="@dimen/half_margin"
            android:textColor="@color/standard_color_white"
            tools:text="好奇猫" />

        <TextView
            android:id="@+id/followAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/double_margin"
            android:background="@drawable/shape_edit_bg"
            android:text="关注"
            android:textColor="@color/standard_color_h3_dark" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/standard_color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注" />

        <View style="@style/VerticalLine" />

        <TextView
            android:id="@+id/friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="趣粉" />

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_height="@dimen/base_margin"
        android:background="@color/bg_pager" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/standard_color_white"
        android:paddingTop="@dimen/half_margin" />
</LinearLayout>
