<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dialog_margin"
    android:layout_marginTop="@dimen/dialog_margin"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/animation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_recommend_card_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:layout_marginTop="@dimen/base_margin"
                android:text="厦门"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_subhead_size" />

            <TextView
                android:id="@+id/item_recommend_card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_toLeftOf="@id/item_recommend_card_city_tv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="地理位置"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_subhead_size"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/animation1"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_weight="1">


            <!--    android:background="@mipmap/ic_place_event"-->


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_recommend_card_photo_sdv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:actualImageScaleType="centerCrop" />

            <TextView
                android:id="@+id/item_place_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin"
                android:background="@drawable/ic_place_event"
                android:text="活动"
                android:textColor="@color/black"
                android:textSize="@dimen/word_size_time" />

        </RelativeLayout>


        <co.quchu.quchu.widget.ratingbar.ProperRatingBar
            android:id="@+id/item_recommend_card_prb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_photo_sdv"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            card_view:prb_clickable="false"
            card_view:prb_defaultRating="4"
            card_view:prb_tickNormalDrawable="@mipmap/ic_ratingbar_off"
            card_view:prb_tickSelectedDrawable="@mipmap/ic_ratingbar_on"
            card_view:prb_tickSpacing="2dp"
            card_view:prb_totalTicks="5" />

        <TextView
            android:id="@+id/item_recommend_card_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_prb"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:text="厦门"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />


        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin" />


        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/quarter_margin" />


        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/quarter_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/item_recommend_card_collect_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/item_recommend_card_collect_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_margin"
                    android:src="@mipmap/ic_atmophere_unselected" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_below="@id/item_recommend_card_collect_iv" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_toRightOf="@id/item_recommend_card_collect_iv" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_recommend_card_interest_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/item_recommend_card_interest_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_margin"
                    android:src="@mipmap/ic_detail_share" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_below="@id/item_recommend_card_interest_iv" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_toRightOf="@id/item_recommend_card_interest_iv" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_recommend_card_reply_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/item_recommend_card_reply_Iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_margin"
                    android:src="@mipmap/ic_atmosphere_more" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_below="@id/item_recommend_card_reply_Iv" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_toRightOf="@id/item_recommend_card_reply_Iv" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>