<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/standard_color_white"
                android:orientation="vertical">

  <include layout="@layout/cp_enhanced_toolbar"/>

  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/qu_history_refresh_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/appbar">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/qu_history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </android.support.v4.widget.SwipeRefreshLayout>

  <co.quchu.quchu.widget.ErrorView
      android:id="@+id/history_error_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"/>

</RelativeLayout>