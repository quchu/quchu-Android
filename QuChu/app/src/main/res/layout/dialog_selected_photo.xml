<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_dark"
    android:gravity="bottom"
    android:padding="@dimen/base_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standard_color_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_photo"
                style="@style/TextView.H3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center"
                android:text="相册" />

            <TextView
                android:id="@+id/select_qutouxiang"
                style="@style/TextView.H3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center"
                android:visibility="gone"
                android:text="趣头像" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/select_cancle"
        style="@style/TextView.H3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_container"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@color/standard_color_white"
        android:text="取消" />


</RelativeLayout>