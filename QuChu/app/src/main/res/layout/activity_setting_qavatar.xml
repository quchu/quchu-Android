<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/about_us_title_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_heigh"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/about_us_title_back_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@drawable/ic_title_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/planet_text_color_white"
            android:textSize="@dimen/word_title_body" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qavatar_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_heigh"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:background="@drawable/shape_detail_bottom_full_bg"
            android:gravity="center"
            android:text="选中一个趣头像"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_subhead_size" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/qavatar_bottom_rl"
        android:layout_below="@id/about_us_title_bar_ll"
        android:background="#555252" />

</RelativeLayout>
