<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dialog_margin"
    android:layout_marginTop="@dimen/dialog_margin"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/animation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_recommend_card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:text="地理位置"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_subhead_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_recommend_card_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/base_margin"
                android:text="厦门"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_subhead_size" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_recommend_card_photo_sdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation1"
            card_view:actualImageScaleType="centerCrop" />

        <co.quchu.quchu.widget.ratingbar.ProperRatingBar
            android:id="@+id/item_recommend_card_prb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_photo_sdv"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_margin"
            card_view:prb_clickable="false"
            card_view:prb_defaultRating="4"
            card_view:prb_tickNormalDrawable="@mipmap/ic_ratingbar_off"
            card_view:prb_tickSelectedDrawable="@mipmap/ic_ratingbar_on"
            card_view:prb_tickSpacing="2dp"
            card_view:prb_totalTicks="5" />

        <TextView
            android:id="@+id/item_recommend_card_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_prb"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:text="厦门"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />


        <LinearLayout
            android:id="@+id/item_recommend_card_progress_one_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_address_tv"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recommend_card_progress_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/half_margin"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_size_time" />

            <co.quchu.quchu.widget.HorizontalNumProgressBar
                android:id="@+id/item_recommend_card_progress_one"
                android:layout_width="0dp"
                android:layout_height="@dimen/horizontal_progressbar_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_recommend_card_progress_two_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_progress_one_ll"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recommend_card_progress_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/half_margin"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_size_time" />

            <co.quchu.quchu.widget.HorizontalNumProgressBar
                android:id="@+id/item_recommend_card_progress_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/horizontal_progressbar_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_recommend_card_progress_three_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_recommend_card_progress_two_ll"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recommend_card_progress_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/half_margin"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_size_time" />

            <co.quchu.quchu.widget.HorizontalNumProgressBar
                android:id="@+id/item_recommend_card_progress_three"
                android:layout_width="0dp"
                android:layout_height="@dimen/horizontal_progressbar_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_recommend_card_collect_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:src="@mipmap/ic_atmophere_unselected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_recommend_card_interest_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:src="@mipmap/ic_detail_share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_recommend_card_reply_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:src="@mipmap/ic_atmosphere_more" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>