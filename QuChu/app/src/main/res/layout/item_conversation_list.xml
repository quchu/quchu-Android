<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_conversation"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/standard_color_white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

  <io.rong.imkit.widget.AsyncImageView
      android:id="@+id/item_conversation_avatar_img"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerVertical="true"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      app:RCCornerRadius="3dp"
      app:RCDefDrawable="@drawable/rc_default_portrait"
      app:RCShape="circle"/>

  <TextView
      android:id="@+id/item_conversation_unread_message_tv"
      android:layout_width="5dp"
      android:layout_height="5dp"
      android:layout_marginLeft="-5dp"
      android:layout_marginTop="5dp"
      android:layout_toRightOf="@+id/item_conversation_avatar_img"
      android:background="@drawable/shape_round_red"
      android:gravity="center"
      android:textColor="@android:color/white"
      android:textSize="10sp"
      android:visibility="invisible"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/item_conversation_avatar_img"
      android:orientation="vertical">

    <TextView
        android:id="@+id/item_conversation_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_conversation_time_tv"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/standard_color_h2_dark"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_conversation_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_conversation_title_tv"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="content"
        android:textColor="@color/standard_color_h2_dark"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_conversation_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="time"
        android:textColor="@color/standard_color_h2_dark"
        android:textSize="14sp"/>

  </RelativeLayout>

  <View
      style="@style/HorizontalDivider"
      android:layout_alignParentBottom="true"/>

</RelativeLayout>