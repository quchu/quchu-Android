<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

  <ImageView
      android:id="@+id/vDrawer"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:scaleType="center"
      android:src="@mipmap/ic_hamburger"/>

  <TextView
      android:id="@+id/tvDrawerUnread"
      android:layout_width="7dp"
      android:layout_height="7dp"
      android:layout_marginLeft="-8dp"
      android:layout_marginTop="2dp"
      android:layout_toRightOf="@+id/vDrawer"
      android:background="@drawable/shape_round_red"
      android:textColor="@color/standard_color_white"
      android:visibility="invisible"/>

</RelativeLayout>