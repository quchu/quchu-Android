<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <include
        android:id="@+id/postcard_detail_titlebar"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/postcard_detail_titlebar"
        android:background="@drawable/ic_activity_bg">

        <android.support.v7.widget.CardView
            android:id="@+id/root_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/base_margin"
            android:clickable="true"
            card_view:cardPreventCornerOverlap="false"
            android:fitsSystemWindows="true"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/cardview_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/item_recommend_card_title_textrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/postcard_detail_finish_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/base_margin"
                        android:layout_marginRight="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:text="完成"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_subhead_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/item_recommend_card_title_textrl"
                    android:layout_margin="@dimen/half_margin"
                    android:background="@drawable/shape_postcard_detail_white_bg">

                    <GridView
                        android:id="@+id/add_postcard_image_igv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/quarter_margin"
                        android:horizontalSpacing="@dimen/quarter_margin"
                        android:numColumns="4"
                        android:verticalSpacing="@dimen/quarter_margin" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>