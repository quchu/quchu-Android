<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_button_group_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_margin"
        android:paddingBottom="@dimen/half_margin"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/llVisitedUsers"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/tvVisitorCount"
            />

        <TextView
            android:layout_below="@+id/llVisitedUsers"
            android:id="@+id/tvVisitorCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.H3"
            />
    </RelativeLayout>



    <View
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        style="@style/DetailHorizontalLine"
        />
</LinearLayout>