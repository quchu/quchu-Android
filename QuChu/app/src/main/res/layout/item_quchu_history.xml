<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingRight="10dp">

    <TextView
        android:id="@+id/best_describe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离最近的"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_shoucang"/>

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_shoucang"/>

    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="距离最近的"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="13sp"/>

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:background="#e0e0e0"
        fresco:placeholderImage="@mipmap/ic_image_empty"
        fresco:roundedCornerRadius="10dp"
        fresco:viewAspectRatio="2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textColor="@color/standard_color_white"
          android:textSize="14sp"
          tools:text="给味蕾一次歇斯底里的呐喊"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/standard_color_white"
          android:textSize="12sp"
          tools:text="- 辣家私厨（万达店）"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/standard_color_white"
          android:textSize="12sp"
          tools:text="咖啡 | 2.4km"/>

    </LinearLayout>

  </RelativeLayout>

</LinearLayout>