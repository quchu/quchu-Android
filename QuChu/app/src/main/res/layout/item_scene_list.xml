<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
    android:clipChildren="false"
    android:orientation="vertical">


  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clipChildren="false"
      android:id="@+id/rl_cover"
      >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/scene_cover_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:actualImageScaleType="fitCenter"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/tvHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hot"
        android:translationX="10dp"
        android:textSize="10dp"
        android:textColor="@color/standard_color_red"
        android:layout_alignRight="@id/scene_cover_img"
        android:visibility="gone"
        />
  </RelativeLayout>



  <TextView
      android:layout_below="@+id/rl_cover"
      android:id="@+id/scene_title_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/half_margin"
      android:singleLine="true"
      android:textColor="@color/standard_color_h3_dark"
      android:textSize="13sp"
      tools:text="寻欢作乐"/>

</LinearLayout>