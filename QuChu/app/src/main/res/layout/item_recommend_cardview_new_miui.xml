<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:failureImage="@mipmap/ic_image_empty"
        fresco:failureImageScaleType="center"
        fresco:placeholderImage="@mipmap/ic_image_empty"
        fresco:placeholderImageScaleType="center"
        fresco:actualImageScaleType="center"
        fresco:roundedCornerRadius ="@dimen/rounded_radius"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="false"
                fresco:roundedCornerRadius="@dimen/rounded_radius" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/desc"
                style="@style/TextView.H1"
                android:textColor="@color/standard_color_white"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:text="@string/empty_string" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_below="@id/desc"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_margin"
                android:layout_marginRight="@dimen/double_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                tools:text="text"
                android:textColor="@color/standard_color_white"
                android:gravity="center"
                style="@style/TextView.H2"
                android:textSize="@dimen/standard_text_size_h3"
                android:maxLines="2"
                android:lineSpacingExtra="4sp"
                android:ellipsize="end"
                />


            <LinearLayout
                android:id="@+id/tags"
                android:layout_below="@id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_margin"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recommend_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/half_margin"
                    android:paddingRight="@dimen/half_margin"
                    android:paddingTop="2dp"
                    android:text="标签1"
                    android:textColor="@color/standard_color_white"
                    android:textSize="@dimen/standard_text_size_h5"
                    tools:text="Tag"
                    tools:visibility="visible"
                    />

                <TextView
                    android:id="@+id/recommend_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/half_margin"
                    android:paddingRight="@dimen/half_margin"
                    android:paddingTop="2dp"
                    android:visibility="gone"
                    android:textColor="@color/standard_color_white"
                    android:textSize="@dimen/standard_text_size_h5"
                    tools:text="Tag"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/recommend_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/half_margin"
                    android:paddingRight="@dimen/half_margin"
                    android:paddingTop="2dp"
                    android:textColor="@color/standard_color_white"
                    android:textSize="@dimen/standard_text_size_h5"
                    tools:text="Tag"
                    tools:visibility="visible"
                    android:visibility="gone" />



            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
