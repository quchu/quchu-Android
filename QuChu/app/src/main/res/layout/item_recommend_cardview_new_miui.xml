<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dialog_margin"
    android:layout_marginLeft="@dimen/half_margin"
    android:layout_marginRight="@dimen/half_margin"
    android:layout_marginTop="@dimen/dialog_margin"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            card_view:actualImageScaleType="centerCrop" />

        <TextView
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_place_event"
            android:text="活动"
            android:textColor="@android:color/black"
            android:textSize="@dimen/word_size_time" />

        <co.quchu.quchu.widget.ratingbar.ProperRatingBar
            android:id="@+id/ProperRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_margin"
            card_view:prb_clickable="false"
            card_view:prb_defaultRating="4"
            card_view:prb_tickNormalDrawable="@mipmap/ic_ratingbar_off"
            card_view:prb_tickSelectedDrawable="@mipmap/ic_ratingbar_on"
            card_view:prb_tickSpacing="2dp"
            card_view:prb_totalTicks="5" />


        <LinearLayout
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProperRatingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommend_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tag_bg"
                android:paddingBottom="@dimen/tow_dp_margin"
                android:paddingLeft="@dimen/quarter_margin"
                android:paddingRight="@dimen/quarter_margin"
                android:paddingTop="@dimen/tow_dp_margin"
                android:text="标签1"
                android:textColor="@color/tagTextColor"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recommend_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_margin"
                android:background="@drawable/shape_tag_bg"
                android:paddingBottom="@dimen/tow_dp_margin"
                android:paddingLeft="@dimen/quarter_margin"
                android:paddingRight="@dimen/quarter_margin"
                android:paddingTop="@dimen/tow_dp_margin"
                android:textColor="@color/tagTextColor"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/recommend_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_margin"
                android:background="@drawable/shape_tag_bg"
                android:paddingBottom="@dimen/tow_dp_margin"
                android:paddingLeft="@dimen/quarter_margin"
                android:paddingRight="@dimen/quarter_margin"
                android:paddingTop="@dimen/tow_dp_margin"
                android:textColor="@color/tagTextColor"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tags"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:background="@color/new_recommend_line_color" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_margin"
            android:text="fdasfd"
            android:textColor="@color/new_recommend_line_color"
            android:textSize="@dimen/word_subhead_size" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_margin"
            android:text="距您当前位置0km"
            android:textColor="@color/lineBackground_gray"
            android:textSize="@dimen/word_size_time" />


        <TextView
            android:id="@+id/item_recommend_card_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_margin"
            android:text="人均消费"
            android:textColor="@color/lineBackground_gray"
            android:textSize="@dimen/word_size_time" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
