<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    fresco:cardPreventCornerOverlap="true"
    fresco:cardCornerRadius="@dimen/rounded_radius"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImage="@mipmap/ic_image_empty"
        fresco:failureImageScaleType="center"
        fresco:placeholderImage="@mipmap/ic_image_empty"
        fresco:placeholderImageScaleType="center"
        fresco:roundedCornerRadius="@dimen/rounded_radius"
        />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/activity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundedCornerRadius="@dimen/rounded_radius"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/base_margin"
          android:layout_marginRight="@dimen/base_margin"
          >


        <TextView
            android:id="@+id/desc"
            android:gravity="left"
            android:shadowColor="@color/translucent_dark"
            android:shadowRadius="30"
            android:text="@string/empty_string"
            android:textColor="@color/standard_color_white"
            android:textStyle="bold"
            style="@style/TextView.H0"
            />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:ellipsize="end"
            android:gravity="left"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:shadowColor="@color/translucent_dark"

            android:shadowRadius="30"
            android:textColor="@color/standard_color_white"
            android:textSize="@dimen/standard_text_size_h1"
            android:textStyle="bold"
            tools:text="text"
            style="@style/TextView.H1"
            />


        <LinearLayout
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvDescription"
            android:orientation="horizontal"
            android:visibility="visible"
            >


          <TextView
              android:id="@+id/recommend_tag1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingBottom="2dp"
              android:paddingTop="2dp"
              android:shadowColor="@color/translucent_dark"
              android:shadowRadius="30"
              android:text="标签1"
              android:textColor="@color/standard_color_white"
              android:textSize="@dimen/standard_text_size_h2"
              tools:text="Tag"
              tools:visibility="visible"
              />

          <TextView
              android:id="@+id/recommend_tag2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/half_margin"
              android:paddingBottom="2dp"
              android:paddingTop="2dp"
              android:shadowColor="@color/translucent_dark"
              android:shadowRadius="30"
              android:textColor="@color/standard_color_white"
              android:textSize="@dimen/standard_text_size_h2"
              android:visibility="gone"
              tools:text="Tag"
              tools:visibility="visible"
              />

          <TextView
              android:id="@+id/recommend_tag3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/half_margin"
              android:paddingBottom="2dp"
              android:paddingTop="2dp"
              android:shadowColor="@color/translucent_dark"
              android:shadowRadius="30"
              android:textColor="@color/standard_color_white"
              android:textSize="@dimen/standard_text_size_h2"
              android:visibility="gone"
              tools:text="Tag"
              tools:visibility="visible"
              />

        </LinearLayout>


      </RelativeLayout>
    </LinearLayout>
  </RelativeLayout>

</android.support.v7.widget.CardView>
