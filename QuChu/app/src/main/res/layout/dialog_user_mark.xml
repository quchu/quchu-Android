<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="10dp"
      app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/standard_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/userMarkImg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"/>

      <TextView
          android:id="@+id/userMarkTitleTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/userMarkImg"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:text="恭喜你"
          android:textColor="@color/standard_color_h1_dark"
          android:textSize="20sp"/>

      <TextView
          android:id="@+id/userMarkTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/userMarkTitleTv"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="30dp"
          android:layout_marginTop="12.5dp"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="14sp"/>

      <TextView
          android:id="@+id/confirmBtn"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_below="@+id/userMarkTv"
          android:background="@drawable/selector_bottom_radius_btn"
          android:gravity="center"
          android:text="OK"
          android:textColor="#111111"
          android:textSize="20sp"/>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>