<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/standard_color_white"
              android:orientation="vertical">

  <include layout="@layout/cp_enhanced_toolbar"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:lineSpacingExtra="@dimen/half_margin"
          android:text="称号种类一共有六种\n即小食神、好奇喵、文艺咖、大财阀、\n外交官、时尚精"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="14sp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:orientation="horizontal">

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/tuhao_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_tuhao_ahsy"
            app:givText="大财阀"
            app:givTextEn="@string/gene_en_name_tuhao"/>

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/haoqi_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_haoqi_ahsy"
            app:givText="好奇喵"
            app:givTextEn="@string/gene_en_name_haoqi"/>

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/shishang_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_shishang_ahsy"
            app:givText="时尚精"
            app:givTextEn="@string/gene_en_name_shishang"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/waijiao_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_shejiao_ahsy"
            app:givText="外交官"
            app:givTextEn="@string/gene_en_name_shejiao"/>

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/wenyi_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_wenyi_ahsy"
            app:givText="文艺咖"
            app:givTextEn="@string/gene_en_name_wenyi"/>

        <co.quchu.quchu.widget.GeneItemView
            android:id="@+id/chihuo_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:givImage="@drawable/ic_chihuo_ahsy"
            app:givText="小食神"
            app:givTextEn="@string/gene_en_name_chihuo"/>

      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:gravity="center"
          android:lineSpacingExtra="@dimen/half_margin"
          android:text="系统会根据你平时的操作判断你的喜好\n并赋予你相对应的称号\n在趣星球每个人都会有一个称号\n它是你在这里的身份象征"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="14sp"/>

    </LinearLayout>

  </RelativeLayout>

</LinearLayout>