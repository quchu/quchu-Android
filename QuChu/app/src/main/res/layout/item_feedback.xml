<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center_horizontal"
                android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:background="@drawable/shape_feedback_item"
      android:orientation="vertical"
      android:padding="20dp">

    <TextView
        android:id="@+id/feedback_item_create_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="12sp"
        tools:text="2016-10-29"/>

    <TextView
        android:id="@+id/feedback_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="Simple String"/>

    <TextView
        android:id="@+id/feedback_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="Simple StringSimple StringSimple StringSimple StringSimple StringSimple StringSimple String"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/feedback_item_settle_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:background="@drawable/shape_feedback_settle_btn"
          android:paddingBottom="5dp"
          android:paddingLeft="18dp"
          android:paddingRight="18dp"
          android:paddingTop="5dp"
          android:text="未处理"
          android:textColor="@color/standard_color_h2_dark"
          android:textSize="12sp"
          android:visibility="visible"/>

      <LinearLayout
          android:id="@+id/feedback_item_chat_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:orientation="horizontal"
          android:padding="5dp"
          android:visibility="gone">

        <TextView
            android:id="@+id/feedback_item_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看回复>"
            android:textColor="@color/standard_color_h2_dark"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/feedback_item_unread_tv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/drawerTitleTv"
            android:background="@drawable/shape_round_red"
            android:textColor="@color/standard_color_white"
            android:visibility="invisible"/>

      </LinearLayout>

    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>