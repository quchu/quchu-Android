<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">



    <com.baidu.mapapi.map.MapView
        android:id="@+id/place_map_mv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/vpNearby"
        android:fadingEdgeLength="0dp"
        android:requiresFadingEdge="none"
        android:layout_alignParentBottom="true"
        tools:listItem="@layout/item_quchu_favorite"
        />

    <ImageView
        android:id="@+id/current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="@dimen/half_margin"
        android:src="@mipmap/ic_dingwei2"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/my_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/current_position"
        android:layout_below="@+id/appbar"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="@dimen/half_margin"
        android:src="@mipmap/ic_dingwei"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/ivReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:padding="@dimen/half_margin"
        android:src="@mipmap/ic_map_return"
        tools:ignore="ContentDescription" />

</RelativeLayout>