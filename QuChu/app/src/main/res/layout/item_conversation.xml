<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:background="@mipmap/bg_conversation_white"
      android:padding="12dp"
      android:text="Question Number 1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:layout_gravity="right"
      android:padding="12dp"
      android:background="@mipmap/bg_conversation_yellow"
      android:text="Answer Number 1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="12dp"
      android:background="@mipmap/bg_conversation_white"
      android:text="Long Long Long Question Number 1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="12dp"
      android:layout_gravity="right"
      android:background="@mipmap/bg_conversation_yellow"
      android:text="Long Long Long Answer Number 1"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="12dp"
      android:background="@mipmap/bg_conversation_white"
      android:text="Extra Long Long Long \nQuestion Number 1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:padding="12dp"
      android:layout_gravity="right"
      android:background="@mipmap/bg_conversation_yellow"
      android:text="Super Super Super Super Super Super Super Super Super Super Super Super Super Super Long Answer Number 1"
      />

</LinearLayout>