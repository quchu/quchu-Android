<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/root_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="@dimen/cardview_margintop"
    android:clickable="true"
    card_view:cardPreventCornerOverlap="false"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:id="@+id/atmosphere_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/atrmosphere_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/word_subhead_size" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/atrmosphere_item_image_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/atrmosphere_item_title_tv"
            fresco:actualImageScaleType="focusCrop" />

        <co.quchu.quchu.widget.ratingbar.ProperRatingBar
            android:id="@+id/atrmosphere_item_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/atrmosphere_item_image_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginTop="@dimen/base_margin"
            card_view:prb_clickable="false"
            card_view:prb_defaultRating="4"
            card_view:prb_tickNormalDrawable="@drawable/ic_ratingbar_off"
            card_view:prb_tickSelectedDrawable="@drawable/ic_ratingbar_on"
            card_view:prb_tickSpacing="2dp"
            card_view:prb_totalTicks="5" />

        <TextView
            android:id="@+id/atrmosphere_item_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/atrmosphere_item_rb"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/word_size_body" />


        <RelativeLayout
            android:id="@+id/atrmosphere_item_selected_rl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/atrmosphere_item_address_tv">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@drawable/ic_atmophere_unselected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/atrmosphere_item_share_rl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/atrmosphere_item_address_tv"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_atmophere_share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/atrmosphere_item_more_rl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/atrmosphere_item_address_tv">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_margin"
                android:src="@drawable/ic_atmosphere_more" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
