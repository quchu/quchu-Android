<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvCover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        fresco:actualImageScaleType="center"
        fresco:failureImage="@mipmap/ic_image_empty"
        fresco:failureImageScaleType="center"
        fresco:placeholderImage="@mipmap/ic_image_empty"
        android:transitionName="tImage"
        fresco:placeholderImageScaleType="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/desc"
            style="@style/TextView.H1"
            android:textColor="@color/standard_color_h2_dark"
            android:layout_marginTop="@dimen/dialog_margin"
            android:text="@string/empty_string"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:transitionName="tNameHolder"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/recommend_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="标签1"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h2"
                tools:text="Tag"
                tools:visibility="visible"
                />


            <View
                android:id="@+id/vHorizontalDivider1"
                android:background="@color/standard_color_h2_dark"
                android:layout_width="1px"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_marginRight="@dimen/half_margin"
                android:layout_height="@dimen/half_margin"
                android:visibility="invisible"

                />
            <TextView
                android:id="@+id/recommend_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h2"
                android:visibility="gone"
                tools:text="Tag"
                tools:visibility="visible"
                />


            <View
                android:id="@+id/vHorizontalDivider2"
                android:background="@color/standard_color_h2_dark"
                android:layout_width="1px"
                android:layout_height="@dimen/half_margin"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_marginRight="@dimen/half_margin"
                android:visibility="invisible"

                />
            <TextView
                android:id="@+id/recommend_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h2"
                android:visibility="gone"
                tools:text="Tag"
                tools:visibility="visible"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextView.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_marginBottom="@dimen/dialog_margin"
            android:lineSpacingExtra="1dp"
            android:textSize="@dimen/standard_text_size_h3"
            android:textColor="@color/standard_color_h3_dark"
            android:gravity="left"
            tools:text="Tag"
            tools:visibility="visible" />
    </RelativeLayout>
</LinearLayout>

