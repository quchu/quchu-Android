<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llRoot"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/standard_color_white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="50dp"
              android:paddingTop="50dp">

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/sdvCover"
      android:layout_width="40dp"
      android:layout_height="40dp"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/base_margin"
      android:gravity="center"
      android:orientation="vertical">

    <TextView
        android:id="@+id/tvCNTitle"
        style="@style/TextView.H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/standard_color_h0_dark"
        android:textStyle="bold"
        tools:text="text"/>

    <TextView
        android:id="@+id/tvENTitle"
        style="@style/TextView.H1"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:gravity="left"
        android:text="@string/empty_string"
        android:textColor="@color/standard_color_h0_dark"
        android:textStyle="bold"/>

  </LinearLayout>

  <View
      android:layout_width="10dp"
      android:layout_height="2dp"
      android:layout_marginBottom="@dimen/half_margin"
      android:layout_marginTop="@dimen/half_margin"
      android:background="@color/standard_color_yellow"/>

  <LinearLayout
      android:id="@+id/tags"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/recommend_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="标签1"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="@dimen/standard_text_size_h2"
        tools:text="Tag"
        tools:visibility="visible"/>

    <View
        android:id="@+id/vHorizontalDivider1"
        android:layout_width="1px"
        android:layout_height="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:background="@color/standard_color_h2_dark"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/recommend_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="@dimen/standard_text_size_h2"
        android:visibility="gone"
        tools:text="Tag"
        tools:visibility="visible"/>

    <View
        android:id="@+id/vHorizontalDivider2"
        android:layout_width="1px"
        android:layout_height="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:background="@color/standard_color_h3_dark"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/recommend_tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="@dimen/standard_text_size_h2"
        android:visibility="gone"
        tools:text="Tag"
        tools:visibility="visible"/>

  </LinearLayout>

</LinearLayout>

