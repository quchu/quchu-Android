<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/standard_color_black"
    >


    <co.quchu.quchu.view.adapter.MultiTouchViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <co.quchu.quchu.widget.CircleIndicator
        android:id="@+id/indicator"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/standard_color_white"
        android:textSize="13sp"
        android:layout_gravity="bottom|left"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        android:paddingTop="@dimen/quarter_margin"
        android:paddingBottom="@dimen/quarter_margin"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/base_margin"
        tools:text="1 of 6"
        />

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/standard_color_white"
        android:textSize="13sp"
        android:layout_gravity="top|right"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        android:paddingTop="@dimen/quarter_margin"
        android:paddingBottom="@dimen/quarter_margin"
        android:layout_marginTop="56dp"
        android:layout_marginRight="@dimen/base_margin"
        android:text="图片来源:大众点评"
        />


    <ImageView
        android:id="@+id/ivReturn"
        android:layout_width="@dimen/toolbar_item_size"
        android:layout_height="@dimen/toolbar_item_size"
        android:src="@mipmap/ic_forward"
        android:rotation="180"
        android:scaleType="center"
        />
</FrameLayout>