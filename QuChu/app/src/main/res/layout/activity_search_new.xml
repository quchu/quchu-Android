<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/standard_color_yellow"
                android:orientation="vertical">

  <co.quchu.quchu.widget.SearchView
      android:id="@+id/search_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <co.quchu.quchu.widget.TagCloudView
      android:id="@+id/tag_cloud_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/search_view"
      app:tcvBackground="@drawable/shape_lineframe_search_tag"
      app:tcvBorder="10dp"
      app:tcvItemBorderHorizontal="10dp"
      app:tcvItemBorderVertical="10dp"
      app:tcvMultiLine="4"
      app:tcvTagResId="@layout/item_search_tag"
      app:tcvTextColor="@color/standard_color_white"
      app:tcvTextSize="6dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/tag_cloud_view"
      android:layout_marginTop="15dp"
      android:background="@color/standard_color_white"
      android:orientation="vertical">

    <co.quchu.quchu.widget.MFrameLayout.MFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_xiaoq_logo"/>

      </RelativeLayout>

      <GridView
          android:id="@+id/search_category_grid_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fadingEdge="none"
          android:listSelector="@color/transparent"
          android:numColumns="3"
          android:overScrollMode="never"
          android:paddingTop="30dp"
          android:scrollbars="none"
          android:verticalSpacing="30dp"/>

    </co.quchu.quchu.widget.MFrameLayout.MFrameLayout>

  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/history_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/search_view"
      android:background="@color/standard_color_white"
      android:visibility="gone"/>

</RelativeLayout>