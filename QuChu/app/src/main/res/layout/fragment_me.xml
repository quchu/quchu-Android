<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      tools:context=".view.activity.MeFragment">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/white">

      <android.support.v4.view.ViewPager
          android:id="@+id/me_viewpager"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/me_indicator"/>

      <co.quchu.quchu.widget.CircleIndicator
          android:id="@+id/me_indicator"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_above="@+id/me_bottom_line"
          android:layout_centerHorizontal="true"
          app:ci_drawable="@drawable/yellow_radius"
          app:ci_drawable_unselected="@drawable/grey_radius"/>

      <View
          android:id="@+id/me_bottom_line"
          style="@style/HorizontalDivider"
          android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_view"
        android:background="@color/standard_color_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin">

      <LinearLayout
          android:id="@+id/friend_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_item_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_quyouquan"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="趣友圈"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/standard_text_size_h2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go_right"/>
      </LinearLayout>

      <View style="@style/HorizontalDivider"/>

      <LinearLayout
          android:id="@+id/quchu_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_item_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_shoucang"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/standard_text_size_h2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go_right"/>
      </LinearLayout>

      <View style="@style/HorizontalDivider"/>

      <RelativeLayout
          android:id="@+id/massage_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_item_size"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:drawableLeft="@mipmap/ic_xinxi"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="消息"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/standard_text_size_h2"/>

        <TextView
            android:id="@+id/unReadMassage"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_toRightOf="@id/tvMsg"
            android:background="@drawable/shape_round_red"
            android:gravity="center"
            android:textColor="@color/standard_color_white"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_go_right"/>
      </RelativeLayout>

      <View style="@style/HorizontalDivider"/>

      <LinearLayout
          android:id="@+id/feedback_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_item_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_yijianhefankui"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="意见与反馈"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="@dimen/standard_text_size_h2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go_right"/>
      </LinearLayout>

    </LinearLayout>

  </RelativeLayout>

</ScrollView>