<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >

    <CheckBox
        android:id="@+id/cbTag"
        android:paddingTop="@dimen/tow_dp_margin"
        android:paddingBottom="@dimen/tow_dp_margin"
        android:layout_marginLeft="@dimen/quarter_margin"
        android:layout_marginRight="@dimen/quarter_margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:gravity="center"
        android:maxLines="1"
        android:button="@null"
        android:textColor="@color/standard_color_h2_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvTag"
        android:textSize="@dimen/word_size_body"
        android:paddingTop="@dimen/tow_dp_margin"
        android:paddingBottom="@dimen/tow_dp_margin"
        android:layout_marginLeft="@dimen/quarter_margin"
        android:layout_marginRight="@dimen/quarter_margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/standard_color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>