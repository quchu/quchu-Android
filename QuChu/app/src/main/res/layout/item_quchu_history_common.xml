<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

  <RelativeLayout
      android:id="@+id/history_label_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#efefef"
      android:paddingLeft="@dimen/base_margin"
      android:paddingRight="@dimen/base_margin"
      android:visibility="gone">

    <TextView
        android:id="@+id/history_describe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="13sp"
        android:visibility="visible"
        tools:text="距离最近的"/>

  </RelativeLayout>

  <include layout="@layout/item_nearby_quchu_detail"/>

</LinearLayout>