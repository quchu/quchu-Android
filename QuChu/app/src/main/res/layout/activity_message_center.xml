<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

  <include
      android:id="@+id/message_center_toolbar"
      layout="@layout/cp_enhanced_toolbar"/>

  <android.support.design.widget.TabLayout
      android:id="@+id/message_center_tab_layout"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      android:layout_centerHorizontal="true"
      app:tabIndicatorColor="@color/standard_color_h1_dark"
      app:tabIndicatorHeight="2dp"
      app:tabMode="fixed"
      app:tabSelectedTextColor="@color/standard_color_h1_dark"
      app:tabTextColor="@color/standard_color_h3_dark"/>

  <co.quchu.quchu.widget.NoScrollViewPager
      android:id="@+id/message_center_viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/message_center_toolbar"/>

</RelativeLayout>