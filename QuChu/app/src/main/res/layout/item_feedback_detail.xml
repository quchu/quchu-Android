<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/feedback_left_avatar_img"
      android:layout_width="48dp"
      android:layout_height="48dp"
      fresco:actualImageScaleType="centerCrop"
      fresco:roundAsCircle="true"/>

  <TextView
      android:id="@+id/feedback_content_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_toLeftOf="@+id/feedback_right_avatar_img"
      android:layout_toRightOf="@+id/feedback_left_avatar_img"
      android:textColor="@color/standard_color_h2_dark"
      android:textSize="14sp"/>

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/feedback_right_avatar_img"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentRight="true"
      fresco:actualImageScaleType="centerCrop"
      fresco:roundAsCircle="true"/>

</RelativeLayout>