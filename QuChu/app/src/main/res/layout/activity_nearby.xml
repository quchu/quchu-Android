<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/cp_enhanced_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginBottom="@dimen/half_margin"
        android:background="@color/standard_color_yellow"
        android:paddingTop="@dimen/half_margin"
        android:paddingLeft="@dimen/half_margin"
        android:paddingBottom="@dimen/half_margin"
        android:paddingRight="@dimen/half_margin" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rvSelection"
        android:scrollbars="none"
        tools:listitem="@layout/item_nearby_quchu" />

</RelativeLayout>
