<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:gravity="center_horizontal"
        android:text="&#040;&#035; &#094; &#095; &#094; &#035;&#041;"
        android:textColor="@color/standard_color_yellow"
        android:textSize="@dimen/word_subhead_size" />

    <TextView
        android:id="@+id/dialog_wanttogo_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@drawable/shape_detail_bottom_full_bg"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/half_margin"
        android:paddingTop="@dimen/half_margin"
        android:text="先收藏起来吧&#126;"
        android:textColor="@color/black"
        android:textSize="@dimen/word_size_body" />


    <TextView
        android:id="@+id/dialog_wanttogo_reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:background="@drawable/shape_detail_bottom_full_bg"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/half_margin"
        android:paddingTop="@dimen/half_margin"
        android:text="我要马上预定&#126;"
        android:textColor="@color/black"
        android:textSize="@dimen/word_size_body" />

    <View
        android:layout_width="0.1dp"
        android:layout_height="@dimen/base_margin" />
</LinearLayout>
