<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

  <View
      android:id="@+id/vSpace"
      android:layout_height="36dp"
      android:layout_width="0dp"
      android:visibility="gone"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="8dp"
      android:gravity="center_vertical"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvAvatar"
        android:layout_width="@dimen/ai_conversation_avatar_size"
        android:layout_height="@dimen/ai_conversation_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        fresco:placeholderImage="@color/translucent_dark"
        android:scaleType="fitXY"
        android:layout_marginRight="8dp"
        fresco:roundAsCircle="true"
        android:layout_alignBottom="@+id/rvContent"

        />


    <RelativeLayout
        android:id="@+id/rvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sdvAvatar"
        >

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/sdvImage"
          android:layout_width="250px"
          android:layout_height="250px"
          fresco:roundedCornerRadius="10px"
          fresco:placeholderImage="@color/translucent_dark"
          android:visibility="gone"
          />

      <TextView
          android:id="@+id/tvQuestion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_conversation_white"
          android:lineSpacingExtra="2dp"
          android:textSize="14sp"
          android:gravity="left|center_vertical"
          tools:text="Question Number 1"
          />
    </RelativeLayout>

  </RelativeLayout>


</LinearLayout>