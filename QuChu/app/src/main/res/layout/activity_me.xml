<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pager"
    android:fitsSystemWindows="true"
    tools:context="co.quchu.quchu.view.activity.MeActivity">


    <include layout="@layout/cp_enhanced_toolbar" />

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:background="@color/standard_color_white"
        android:paddingBottom="@dimen/half_margin">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_margin"
            fresco:placeholderImage="@mipmap/avatar_2"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@id/headImage"
            android:layout_marginLeft="@dimen/double_margin"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_toEndOf="@id/headImage"
            android:layout_toRightOf="@id/headImage"
            android:background="@drawable/shape_edit_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin">

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_edit_small" />

            <TextView
                android:id="@+id/followAction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="登陆"
                android:textColor="@color/standard_color_h3_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_margin"
            android:singleLine="true"
            android:textColor="@color/standard_color_h2_dark"
            tools:text="我的手_做不到" />

        <Button
            android:id="@+id/alias"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/me_user_tag"
            android:textColor="@color/standard_color_h3_dark"
            tools:text="好奇猫" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_head"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@color/standard_color_white"
        android:orientation="vertical"
        android:padding="@dimen/base_margin">

        <co.quchu.quchu.widget.LinearProgressView
            android:id="@+id/progress1"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <co.quchu.quchu.widget.LinearProgressView
            android:id="@+id/progress2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/half_margin" />

        <co.quchu.quchu.widget.LinearProgressView
            android:id="@+id/progress3"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/half_margin" />

        <co.quchu.quchu.widget.LinearProgressView
            android:id="@+id/progress4"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/half_margin" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressContainer"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@color/standard_color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/quchu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/half_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_label_location_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="收藏"
                    android:textColor="@color/standard_color_h2_dark"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>

            <View style="@style/VerticalLine" />

            <LinearLayout
                android:id="@+id/footPrint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/half_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_footprint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="脚印"
                    android:textColor="@color/standard_color_h2_dark"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:id="@+id/containerMass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/half_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_frient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="趣友圈"
                    android:textColor="@color/standard_color_h2_dark"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>

            <View style="@style/VerticalLine" />

            <RelativeLayout
                android:id="@+id/massage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/half_margin">

                <ImageView
                    android:id="@+id/iconMassage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_massage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconMassage"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="3dp"
                    android:text="消息"
                    android:textColor="@color/standard_color_h2_dark"
                    android:textSize="@dimen/word_size_body" />

                <TextView
                    android:id="@+id/unReadMassage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/iconMassage"
                    android:background="@drawable/shape_round_red"
                    android:gravity="center"
                    android:textColor="@color/standard_color_white"
                    android:visibility="invisible"
                    tools:text="1"
                    tools:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/findPosition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_alignParentBottom="true"
        android:background="@color/standard_color_white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_writebig" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="发现新趣处"
            android:textColor="@color/standard_color_h2_dark"
            android:textSize="@dimen/word_title_body"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
