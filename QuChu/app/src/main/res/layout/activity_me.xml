<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/standard_color_white"
                android:orientation="vertical">

  <include layout="@layout/cp_enhanced_toolbar"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/user_logout_btn"
      android:layout_below="@id/appbar"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userAvatarImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:placeholderImage="@drawable/head_place_hold"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/colorBackground"
            app:roundingBorderWidth="3px"/>

      </RelativeLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/half_margin"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="18sp"
            tools:text="我的手_做不到"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userGenderImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/half_margin"
            app:backgroundImage="@color/standard_color_white"
            app:roundAsCircle="true"/>

      </LinearLayout>

      <TextView
          android:id="@+id/userGeneNameTv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/half_margin"
          android:textColor="@color/standard_color_h1_dark"
          android:textSize="16sp"
          tools:text="@string/gene_en_name_shejiao"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userMarkTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_rectangle_wireframe_black_fill"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:textColor="@color/standard_color_white"
            android:textSize="12sp"
            tools:text="好奇猫"/>

        <ImageView
            android:id="@+id/user_genes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_margin"
            android:padding="@dimen/half_margin"
            android:src="@drawable/ic_wenhao"/>

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <co.quchu.quchu.widget.MeItemView
          android:id="@+id/me_info_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:miImage="@drawable/ic_gerenzhongxin"
          app:miText="个人信息"/>

      <co.quchu.quchu.widget.MeItemView
          android:id="@+id/me_social_account_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:miImage="@drawable/ic_bangdingzhanghao"
          app:miText="绑定账号"/>

      <co.quchu.quchu.widget.MeItemView
          android:id="@+id/me_change_password_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:miImage="@drawable/ic_xiugaimima"
          app:miText="修改密码"/>

    </LinearLayout>

  </LinearLayout>

  <TextView
      android:id="@+id/user_logout_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/base_margin"
      android:background="@drawable/shape_corner_grey"
      android:gravity="center"
      android:paddingBottom="8dp"
      android:paddingLeft="46dp"
      android:paddingRight="46dp"
      android:paddingTop="8dp"
      android:text="退出登录"
      android:textColor="@color/standard_color_h3_dark"
      android:textSize="14sp"/>

</RelativeLayout>
