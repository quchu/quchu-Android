<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include
        layout="@layout/cp_enhanced_toolbar"
        android:animateLayoutChanges="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/appBackground"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/detail_bottom_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground_dark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/appBackground_dark"
            android:paddingBottom="@dimen/half_margin"
            android:paddingTop="@dimen/half_margin"
            android:src="@mipmap/ic_star_stroke" />

        <View
            style="@style/DetailVerticalLine"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:layout_marginTop="@dimen/quarter_margin" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/appBackground_dark"
            android:paddingBottom="@dimen/half_margin"
            android:paddingTop="@dimen/half_margin"
            android:src="@mipmap/ic_share_quchu" />
    </LinearLayout>


</LinearLayout>
