<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@color/appBackground">

        <include
            android:animateLayoutChanges="true"
            layout="@layout/cp_enhanced_toolbar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/detail_bottom_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground_dark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/half_margin"
            android:paddingBottom="@dimen/half_margin"
            android:background="@color/appBackground_dark"
            android:src="@mipmap/ic_star_stroke"
            />
        <View
            style="@style/DetailVerticalLine"
            android:layout_marginTop="@dimen/quarter_margin"
            android:layout_marginBottom="@dimen/quarter_margin"
            />
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/half_margin"
            android:paddingBottom="@dimen/half_margin"
            android:background="@color/appBackground_dark"
            android:src="@mipmap/ic_share_quchu"
            />
    </LinearLayout>



</LinearLayout>
