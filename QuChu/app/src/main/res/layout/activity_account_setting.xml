<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <include
        layout="@layout/cp_enhanced_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            card_view:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/account_setting_avatar_sdv"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        card_view:actualImageScaleType="focusCrop"
                        card_view:roundAsCircle="true"
                        card_view:roundingBorderColor="@android:color/black"
                        card_view:roundingBorderWidth="3dp" />

                    <TextView
                        android:id="@+id/account_setting_avatar_editer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/account_setting_avatar_sdv"
                        android:layout_marginTop="@dimen/quarter_margin"
                        android:background="@android:color/black"
                        android:paddingBottom="@dimen/tow_dp_margin"
                        android:paddingLeft="@dimen/quarter_margin"
                        android:paddingRight="@dimen/quarter_margin"
                        android:paddingTop="@dimen/tow_dp_margin"
                        android:text="编辑头像"
                        android:textColor="@color/standard_color_yellow"
                        android:textSize="@dimen/word_size_body" />

                    <EditText
                        android:id="@+id/account_setting_nickname_et"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="用户名"
                        android:singleLine="true"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textColorHint="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />

                    <View
                        style="@style/AccountBHl"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@id/account_setting_nickname_et"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv" />

                    <TextView
                        android:id="@+id/account_setting_gender_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/account_setting_nickname_et"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv"
                        android:drawableRight="@mipmap/ic_account_setting_right_arrow"
                        android:gravity="center_vertical"
                        android:text="男"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />

                    <View
                        style="@style/AccountBHl"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/accounds"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="注册账号"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/word_subhead_size" />

                    <TextView
                        android:id="@+id/account_setting_phone_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />


                    <View style="@style/AccountBHl" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="所在城市"
                    android:textColor="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_subhead_size" />

                <TextView
                    android:id="@+id/account_setting_user_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="@dimen/half_margin"
                    android:drawableRight="@mipmap/ic_account_setting_location_icon"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/word_size_body" />


                <View style="@style/AccountBHl" />


                <include layout="@layout/layout_modiff_password" />


                <TextView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="退出当前账号"
                    android:textColorHint="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_size_time" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
