<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/appBackground"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/account_setting_title_bar"
        layout="@layout/title_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/account_setting_title_bar"
        android:layout_margin="@dimen/base_margin"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_margin"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/account_setting_avatar_sdv"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentLeft="true"
                        card_view:actualImageScaleType="focusCrop"
                        card_view:roundAsCircle="true"
                        card_view:roundingBorderColor="@color/black"
                        card_view:roundingBorderWidth="3dp" />

                    <TextView
                        android:id="@+id/account_setting_avatar_editer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/account_setting_avatar_sdv"
                        android:layout_marginTop="@dimen/quarter_margin"
                        android:background="@color/black"
                        android:paddingBottom="@dimen/tow_dp_margin"
                        android:paddingLeft="@dimen/quarter_margin"
                        android:paddingRight="@dimen/quarter_margin"
                        android:paddingTop="@dimen/tow_dp_margin"
                        android:text="编辑头像"
                        android:textColor="@color/gene_textcolor_yellow"
                        android:textSize="@dimen/word_size_body" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignTop="@id/account_setting_avatar_sdv"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/account_setting_nickname_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="用户名"
                            android:textColor="@color/account_setting_text_hint_color"
                            android:textColorHint="@color/account_setting_text_hint_color"
                            android:textSize="@dimen/word_size_body" />

                        <View style="@style/AccountBHl" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@id/account_setting_avatar_editer_tv"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/account_setting_avatar_sdv"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/account_setting_gender_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="男"
                            android:textColor="@color/account_setting_text_hint_color"
                            android:textSize="@dimen/word_size_body" />

                        <View style="@style/AccountBHl" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_account_setting_right_arrow" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="注册账号"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_subhead_size" />

                    <TextView
                        android:id="@+id/account_setting_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />

                    <View style="@style/AccountBHl" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="所在城市"
                    android:textColor="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_title_body" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/account_setting_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_size_body" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_account_setting_location_icon" />

                    <View style="@style/AccountBHl" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="修改密码"
                    android:textColor="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_title_body" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:text="新密码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_size_body" />

                    <EditText
                        android:id="@+id/account_setting_new_pwd_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
                        android:background="@null"
                        android:hint="请输入新密码"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textColorHint="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />

                    <View style="@style/AccountBHl" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/base_margin"
                        android:layout_marginTop="@dimen/base_margin"
                        android:text="确认新密码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_size_body" />

                    <EditText
                        android:id="@+id/account_setting_new_pwd_again_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
                        android:background="@null"
                        android:hint="请再次输入新密码"
                        android:textColor="@color/account_setting_text_hint_color"
                        android:textColorHint="@color/account_setting_text_hint_color"
                        android:textSize="@dimen/word_size_body" />

                    <View style="@style/AccountBHl" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:background="@color/gene_textcolor_yellow"
                    android:gravity="center"
                    android:paddingBottom="@dimen/half_margin"
                    android:paddingTop="@dimen/half_margin"
                    android:text="保存以上修改"
                    android:textColor="@color/black"
                    android:textSize="@dimen/word_subhead_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="新浪微博"
                    android:textColor="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_title_body" />

                <TextView
                    android:id="@+id/account_setting_bind_weibo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_margin"
                    android:background="@drawable/shape_account_weibo_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/half_margin"
                    android:paddingTop="@dimen/half_margin"
                    android:text="绑定我的新浪微博"
                    android:textColor="@color/account_setting_weibo_color"
                    android:textSize="@dimen/word_subhead_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="微信"
                    android:textColor="@color/account_setting_text_hint_color"
                    android:textSize="@dimen/word_title_body" />

                <TextView
                    android:id="@+id/account_setting_bind_wechat_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dialog_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:background="@drawable/shape_account_wechat_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/half_margin"
                    android:paddingTop="@dimen/half_margin"
                    android:text="绑定我的微信"
                    android:textColor="@color/account_setting_wechat_color"
                    android:textSize="@dimen/word_subhead_size" />
            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


</RelativeLayout>
