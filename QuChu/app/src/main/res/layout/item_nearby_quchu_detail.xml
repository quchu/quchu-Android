<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/base_margin"
    android:layout_marginRight="@dimen/base_margin"
    app:cardCornerRadius="@dimen/rounded_radius"
    android:layout_marginTop="@dimen/half_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:overlayImage="@color/translucent_dark"
            app:placeholderImage="@mipmap/ic_image_empty"
            app:roundedCornerRadius="@dimen/rounded_radius"
             />


        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_above="@+id/tag"
            android:textColor="@color/standard_color_white"
            android:textSize="@dimen/word_subhead_size"
            tools:text="标题" />


        <co.quchu.quchu.widget.TagCloudView
            android:id="@+id/tag"
            android:layout_marginLeft="@dimen/base_margin"
            app:tcvTextSize="4dp"
            app:tcvBorder = "8dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tcvCanTagClick="false"
            app:tcvSingleLine="true"
            app:tcvItemBorderHorizontal="5dp"
            app:tcvBackground="@drawable/shape_lineframe_white_cap"
            app:tcvTextColor="@color/standard_color_white" />
        <TextView
            android:id="@+id/address"
            android:layout_below="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/double_margin"
            android:drawableLeft="@mipmap/ic_loca"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/standard_color_white"
            android:visibility="invisible"
            tools:text="厦门观音山.dfd"
            android:textSize="@dimen/standard_text_size_h3"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/ivForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_margin"
            android:src="@mipmap/ic_forward" />
    </RelativeLayout>

</android.support.v7.widget.CardView>