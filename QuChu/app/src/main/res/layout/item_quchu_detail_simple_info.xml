<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:paddingLeft="@dimen/base_margin"
    android:paddingRight="@dimen/base_margin"
    >

  <TextView
      android:id="@+id/detail_store_name_tv"
      android:layout_marginTop="20dp"
      android:textSize="@dimen/standard_text_size_h0"
      tools:text="@string/empty_string"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      style="@style/TextView.H1"
      />

  <TextView
      android:id="@+id/tvDesc"
      android:layout_below="@id/detail_store_name_tv"
      android:layout_marginTop="@dimen/half_margin"
      android:layout_centerHorizontal="true"
      tools:text="@string/empty_string"
      style="@style/TextView.H2"
      />

  <TextView
      android:id="@+id/tvTags"
      android:layout_below="@id/tvDesc"
      android:layout_marginTop="@dimen/base_margin"
      tools:text="@string/empty_string"
      android:layout_centerHorizontal="true"
      style="@style/TextView.H3"
      android:textSize="@dimen/standard_text_size_h2"
      />

  <View
      android:layout_below="@+id/tvTags"
      android:layout_marginBottom="@dimen/base_margin"
      android:layout_marginTop="@dimen/base_margin"
      style="@style/HorizontalDividerDark"
      />
</RelativeLayout>