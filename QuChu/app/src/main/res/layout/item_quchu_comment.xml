<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    >




  <LinearLayout
      android:id="@+id/llStart"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginTop="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvAvatar"
        android:layout_width="@dimen/comment_users_avatar_size"
        android:layout_height="@dimen/comment_users_avatar_size"
        android:src="@drawable/ic_launcher"
        fresco:roundAsCircle="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/base_margin"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tvUsername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="UserName"
          style="@style/TextView.H2"
          />


      <TextView
          android:id="@+id/tvDate"
          android:layout_marginTop="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Date"
          android:layout_gravity="top"
          style="@style/TextView.H3"
          />
    </LinearLayout>



  </LinearLayout>

  <LinearLayout
      android:id="@+id/llComments"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/tvUserComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Comment"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="@dimen/base_margin"
        style="@style/TextView.H3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvImages"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/half_margin"
          tools:listitem="@layout/rc_item_image_message"
          />


    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

     <TextView
         android:id="@+id/tvFrom"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:text="来自大众点评"
         android:layout_centerVertical="true"
         style="@style/TextView.H3"
         android:gravity="center"
         android:textColor="@color/colorHint"
         />

     <ImageView
         android:id="@+id/ivArrow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:src="@drawable/ic_tiaozhuan"
         android:visibility="gone"
         android:layout_toRightOf="@id/tvFrom"

         />
     <TextView
         android:id="@+id/tvCollapse"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:gravity="right"
         android:visibility="gone"
         tools:text="Comment"
         tools:visibility="visible"
         style="@style/TextView.H3"
         />
   </RelativeLayout>

  </LinearLayout>

  <RelativeLayout
      android:id="@+id/bottom_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:layout_marginBottom="@dimen/base_margin"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivFrom"
        android:visibility="gone"
        android:layout_width="@dimen/comment_from_avatar_size"
        android:layout_height="@dimen/comment_from_avatar_size"
        />



  </RelativeLayout>

  <TextView
      android:id="@+id/tvRatingCount"
      android:layout_below="@+id/llComments"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="共1200人评价"
      android:visibility="gone"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/half_margin"
      android:layout_marginTop="@dimen/half_margin"
      android:textColor="@color/standard_color_h3_dark"
      android:textSize="@dimen/standard_text_size_h3"
      />


  <View
  android:id="@+id/vDivider"
  android:layout_marginLeft="@dimen/base_margin"
  android:layout_marginRight="@dimen/base_margin"
  style="@style/HorizontalLine"
  />



</LinearLayout>