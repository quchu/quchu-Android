<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_friends_root_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_margin"
    android:layout_marginRight="@dimen/base_margin"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item_care_friends_subtitle_rl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/care_about_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/itemMask_black"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_centerVertical="true"
            android:text="@string/text_planet_discover_gene"
            android:textColor="@color/white"
            android:textSize="@dimen/word_size_body" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_care_friends_body_rl"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_care_friends_icon_sdv"
            android:layout_width="@dimen/item_care_friends_icon_size"
            android:layout_height="@dimen/item_care_friends_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            fresco:actualImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            fresco:retryImage="@drawable/ic_care_friends_avatar"
            fresco:roundBottomLeft="true"
            fresco:roundingBorderColor="@color/planet_progress_yellow"
            fresco:roundingBorderWidth="2dp"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="180dp" />

        <TextView
            android:id="@+id/item_care_friends_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_care_friends_icon_sdv"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_toRightOf="@id/item_care_friends_icon_sdv"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />

        <TextView
            android:id="@+id/item_care_friends_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_care_friends_icon_sdv"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_toRightOf="@id/item_care_friends_icon_sdv"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_time" />

        <co.quchu.quchu.widget.RoundProgressBar
            android:id="@+id/item_care_friends_rpb"
            android:layout_width="@dimen/item_friends_icon_size"
            android:layout_height="@dimen/item_friends_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            fresco:roundColor="@color/lineBackground_gray"
            fresco:roundProgressColor="@color/planet_progress_yellow"
            fresco:progressStyle="Default"
            fresco:textColor="@color/planet_progress_yellow"
            fresco:textSize="@dimen/word_title_body"
            fresco:textStyle="NumWord" />
    </RelativeLayout>
</RelativeLayout>
