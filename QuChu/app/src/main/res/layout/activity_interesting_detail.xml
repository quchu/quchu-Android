<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/detail_bottom_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/appBackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_been_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/quarter_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_weight="1"
            android:background="@drawable/shape_detail_bottom_bg"
            android:gravity="center"
            android:text="去过"
            android:textColor="@color/gene_textcolor_yellow"
            android:textSize="@dimen/word_size_body" />

        <TextView
            android:id="@+id/detail_want_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginLeft="@dimen/quarter_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_weight="1"
            android:background="@drawable/shape_detail_bottom_bg"
            android:gravity="center"
            android:text="想去"
            android:textColor="@color/gene_textcolor_yellow"
            android:textSize="@dimen/word_size_body" />
    </LinearLayout>

    <co.quchu.quchu.widget.OutSideScrollView
        android:id="@+id/detail_outside_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/detail_bottom_group_ll"
        android:layout_below="@id/title_bar"
        android:background="@drawable/ic_activity_bg"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/detail_marginright"
            android:orientation="vertical">

            <include
                layout="@layout/item_card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin" />


            <LinearLayout
                android:id="@+id/detail_button_group_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_button_group_height"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/detail_button_collect_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/detail_button_collect_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_uncollect" />
                </RelativeLayout>

                <View
                    style="@style/DetailVerticalLine"
                    android:layout_marginBottom="@dimen/tow_dp_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />


                <RelativeLayout
                    android:id="@+id/detail_button_share_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_share" />
                </RelativeLayout>

                <View
                    style="@style/DetailVerticalLine"
                    android:layout_marginBottom="@dimen/tow_dp_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />

                <RelativeLayout
                    android:id="@+id/detail_button_add_postcard_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_add_postcard" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_full_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_store_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:text="sds"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_subhead_size" />

                <View
                    style="@style/DetailHorizontalLine"
                    android:layout_marginRight="@dimen/base_margin" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <co.quchu.quchu.widget.ratingbar.ProperRatingBar
                        android:id="@+id/detail_suggest_prb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/quarter_margin"
                        android:layout_marginLeft="@dimen/half_margin"
                        android:layout_marginTop="@dimen/half_margin"
                        card_view:prb_clickable="false"
                        card_view:prb_defaultRating="4"
                        card_view:prb_tickNormalDrawable="@drawable/ic_ratingbar_off"
                        card_view:prb_tickSelectedDrawable="@drawable/ic_ratingbar_on"
                        card_view:prb_tickSpacing="2dp"
                        card_view:prb_totalTicks="5" />


                    <!--人均消费-->
                    <TextView
                        android:id="@+id/detail_avg_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/detail_avg_price_text_bg"
                        android:paddingLeft="@dimen/half_margin"
                        android:paddingRight="@dimen/base_margin"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/word_subhead_size" />

                    <co.quchu.quchu.widget.TagCloudView
                        android:id="@+id/detail_store_tagclound_tcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_suggest_prb"
                        android:layout_marginBottom="@dimen/half_margin"
                        android:layout_toLeftOf="@id/detail_avg_price_tv"
                        card_view:tcvBorder="8dp"
                        card_view:tcvCanTagClick="false"
                        card_view:tcvItemBorderHorizontal="1dp"
                        card_view:tcvItemBorderVertical="4dp"
                        card_view:tcvRightResId="@null"
                        card_view:tcvSingleLine="false"
                        card_view:tcvTextColor="@color/text_color_white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detail_store_address_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginRight="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_store_address_tv"
                        style="@style/DetailTextStyle_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="地址 "
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/word_size_body" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_detail_right_arrow" />
                </LinearLayout>

                <View style="@style/DetailHorizontalLine" />

                <LinearLayout
                    android:id="@+id/detail_store_phone_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_store_phone_tv"
                        style="@style/DetailTextStyle_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/half_margin"
                        android:layout_weight="1"
                        android:text="电话号码"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/word_size_body" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/half_margin"
                        android:src="@drawable/ic_detail_right_arrow" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="vertical">


                <co.quchu.quchu.widget.HorizontalNumProgressBar
                    android:id="@+id/detail_progress_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_margin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginRight="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin" />

                <co.quchu.quchu.widget.HorizontalNumProgressBar
                    android:id="@+id/detail_progress_tow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_margin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginRight="@dimen/half_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />

                <co.quchu.quchu.widget.HorizontalNumProgressBar
                    android:id="@+id/detail_progress_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_margin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginRight="@dimen/half_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />

            </LinearLayout>

            <!--     <android.support.v7.widget.CardView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/half_margin"
                     android:visibility="gone"
                     card_view:cardBackgroundColor="@color/detail_card_bg_color"
                     card_view:cardCornerRadius="@dimen/detail_card_radius"
                     card_view:cardElevation="@dimen/cardview_elevation">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_box_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_box"
                                android:text="包厢" />
                        </RelativeLayout>

                        <View style="@style/DetailVerticalLine" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_mess_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_mess"
                                android:text="堂食" />
                        </RelativeLayout>

                        <View style="@style/DetailVerticalLine" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_takeout_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_takeout"
                                android:text="外送" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View style="@style/DetailHorizontalLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/half_margin"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_cash_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_cash"
                                android:text="现金" />
                        </RelativeLayout>

                        <View style="@style/DetailVerticalLine" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_cardpay_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_cardpay"
                                android:text="银行卡" />
                        </RelativeLayout>

                        <View style="@style/DetailVerticalLine" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_zfb_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_zfb"
                                android:text="支付宝" />
                        </RelativeLayout>

                        <View style="@style/DetailVerticalLine" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/detail_wechat_rb"
                                style="@style/DetailRadioButton"
                                android:drawableTop="@drawable/rb_detail_wechat"
                                android:text="微信支付" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/detail_store_business_hours_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_store_business_hours_key_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:text="营业时间"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_subhead_size" />

                <View style="@style/DetailHorizontalLine" />

                <TextView
                    android:id="@+id/detail_store_business_hours_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:text="周末"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/detail_nearby_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_nearby_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:text="附近景点"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_subhead_size" />

                <View style="@style/DetailHorizontalLine" />

                <co.quchu.quchu.widget.TagCloudView
                    android:id="@+id/detail_nearby_tcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_suggest_prb"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginLeft="@dimen/quarter_margin"
                    android:layout_toLeftOf="@id/detail_avg_price_tv"
                    card_view:tcvBorder="8dp"
                    card_view:tcvCanTagClick="false"
                    card_view:tcvItemBorderHorizontal="1dp"
                    card_view:tcvItemBorderVertical="4dp"
                    card_view:tcvRightResId="@null"
                    card_view:tcvSingleLine="false"
                    card_view:tcvTextColor="@color/text_color_white" />
            </LinearLayout>

            <co.quchu.quchu.widget.InnerListView
                android:id="@+id/detail_image_list_ilv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:background="@null"
                android:scrollbars="none" />

        </LinearLayout>

    </co.quchu.quchu.widget.OutSideScrollView>

    <LinearLayout
        android:id="@+id/detail_button_group_out_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detail_subtitle_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_button_group_height"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/quarter_margin"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/detail_marginright"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@drawable/ic_card_shadow_bg"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/detail_button_collect_out_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/detail_button_collect_out_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_uncollect" />
                </RelativeLayout>

                <View
                    style="@style/DetailVerticalLine"
                    android:layout_marginBottom="@dimen/tow_dp_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />


                <RelativeLayout
                    android:id="@+id/detail_button_share_out_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_share" />
                </RelativeLayout>

                <View
                    style="@style/DetailVerticalLine"
                    android:layout_marginBottom="@dimen/tow_dp_margin"
                    android:layout_marginTop="@dimen/quarter_margin" />

                <RelativeLayout
                    android:id="@+id/detail_button_add_postcard_out_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_detail_add_postcard" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
