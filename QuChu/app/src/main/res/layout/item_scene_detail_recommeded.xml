<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/standard_color_white"
              android:clickable="false"
              android:fitsSystemWindows="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_margin"
        android:background="@color/colorBackground"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/sdvCover"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_launcher"
          card_view:actualImageScaleType="centerCrop"
          card_view:failureImage="@drawable/ic_image_empty"
          card_view:failureImageScaleType="center"
          card_view:placeholderImage="@drawable/ic_image_empty"
          card_view:placeholderImageScaleType="center"
          card_view:roundBottomLeft="false"
          card_view:roundBottomRight="false"
          card_view:roundTopLeft="true"
          card_view:roundTopRight="true"
          card_view:viewAspectRatio="1.7"
          />

      <LinearLayout
          android:id="@+id/llHighLight"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/sdvCover"
          android:layout_marginTop="@dimen/double_margin"
          android:background="@color/translucent_dark"
          android:gravity="center"
          android:paddingBottom="@dimen/quarter_margin"
          android:paddingLeft="@dimen/half_margin"
          android:paddingRight="@dimen/half_margin"
          android:paddingTop="@dimen/quarter_margin"
          >

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_most"
            android:drawablePadding="@dimen/half_margin"
            android:textColor="@color/standard_color_yellow"
            android:textStyle="bold"
            tools:text="Test content"
            />
      </LinearLayout>

      <ImageView
          android:id="@+id/ivFavorite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/base_margin"
          android:layout_marginTop="@dimen/base_margin"
          android:background="@drawable/shape_round_scene_favorite_dark_background"
          android:scaleType="center"
          android:src="@drawable/ic_weishoucang"
          />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdvCover"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <View
          android:layout_width="2dp"
          android:layout_height="10dp"
          android:background="@color/standard_color_yellow"/>

      <TextView
          android:id="@+id/tvTitle"
          style="@style/TextView.H1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:singleLine="true"
          android:text="title"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:singleLine="true"
        android:textColor="@color/standard_color_h2_dark"
        android:textSize="@dimen/standard_text_size_h4"
        android:visibility="gone"
        tools:text="- 一句话描述"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/half_margin"
        >

      <TextView
          android:id="@+id/tvCircleName"
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          tools:text="1111"
          />

      <View
          android:id="@+id/vDivider1"
          android:layout_width="1px"
          android:layout_height="@dimen/half_margin"
          android:layout_marginLeft="@dimen/quarter_margin"
          android:layout_marginRight="@dimen/quarter_margin"
          android:background="@color/standard_color_h3_dark"
          />

      <TextView
          android:id="@+id/tvDistance"
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/quarter_margin"
          android:layout_marginRight="@dimen/quarter_margin"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          tools:text="1111"
          />

      <View
          android:id="@+id/vDivider2"
          android:layout_width="1px"
          android:layout_height="@dimen/half_margin"
          android:layout_marginLeft="@dimen/quarter_margin"
          android:layout_marginRight="@dimen/quarter_margin"
          android:background="@color/standard_color_h3_dark"
          />

      <TextView
          android:id="@+id/tvPrice"
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/tvDistance"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          tools:text="1111"
          />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:background="@color/colorBorder"
        />

    <LinearLayout
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_margin"
        >

      <TextView
          android:id="@+id/recommend_tag1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/shape_lineframe_black_thin"
          android:paddingBottom="2dp"
          android:paddingLeft="@dimen/half_margin"
          android:paddingRight="@dimen/half_margin"
          android:paddingTop="2dp"
          android:text="标签1"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          />

      <TextView
          android:id="@+id/recommend_tag2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/half_margin"
          android:background="@drawable/shape_lineframe_black_thin"
          android:paddingBottom="2dp"
          android:paddingLeft="@dimen/half_margin"
          android:paddingRight="@dimen/half_margin"
          android:paddingTop="2dp"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          android:visibility="gone"
          />

      <TextView
          android:id="@+id/recommend_tag3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/half_margin"
          android:background="@drawable/shape_lineframe_black_thin"
          android:paddingBottom="2dp"
          android:paddingLeft="@dimen/half_margin"
          android:paddingRight="@dimen/half_margin"
          android:paddingTop="2dp"
          android:textColor="@color/standard_color_h3_dark"
          android:textSize="@dimen/standard_text_size_h4"
          android:visibility="gone"
          />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>