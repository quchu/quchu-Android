<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7f000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/base_margin"
        android:layout_marginLeft="@dimen/title_bar_height"
        android:layout_marginRight="@dimen/title_bar_height"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@android:color/white"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_margin"
                android:gravity="center_horizontal"
                android:text="注意!"
                android:textColor="@color/standard_color_red"
                android:textSize="@dimen/word_subhead_size"/>

            <TextView
                android:id="@+id/searchFilterContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center"
                android:minHeight="32dp"
                android:paddingBottom="@dimen/double_margin"
                android:text="哈哈哈哈哈"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/word_subhead_size"/>

            <LinearLayout
                android:id="@+id/common_dialog_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <View style="@style/HorizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/passive"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="取消"
                        android:textColor="@color/standard_color_h2_dark"
                        android:textSize="@dimen/word_size_body"/>

                    <View style="@style/VerticalLine"/>

                    <Button
                        android:id="@+id/active"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确定"
                        android:textColor="@color/standard_color_red"
                        android:textSize="@dimen/word_size_body"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/subButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/double_margin"
        android:background="@null"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/base_margin"
        android:text="子按钮"
        android:textColor="@android:color/white"/>

</RelativeLayout>
