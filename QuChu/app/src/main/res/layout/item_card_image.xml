<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:orientation="vertical"
    android:layout_marginLeft="@dimen/base_margin"
    android:layout_marginRight="@dimen/base_margin"
    android:layout_marginTop="@dimen/base_margin"
    android:fitsSystemWindows="true">

    <!--   android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="@dimen/cardview_elevation"-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_card_image_sdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:placeholderImage="@mipmap/ic_image_empty"
        card_view:failureImage="@mipmap/ic_image_empty"
        card_view:failureImageScaleType="focusCrop"
        card_view:actualImageScaleType="focusCrop"
        card_view:placeholderImageScaleType="focusCrop"/>
</LinearLayout>