<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activity.QuchuDetailsActivity">

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:background="@color/standard_color_h3_dark"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/base_margin"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_margin"
        android:src="@mipmap/ic_timeline_circle_active"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/double_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivQuchuCover"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:overlayImage="@drawable/bg_quchu_details_toolbar_gradient" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvPlaceName"
                        style="@style/TextView.H1"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/empty_string"
                        android:textColor="@color/standard_color_h1_dark"
                        tools:text="THANK U MUM 炸鸡（罗炳森）" />


                    <TextView
                        android:id="@+id/tvPlaceLocation"
                        style="@style/TextView.H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/half_margin"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/half_margin"
                        android:drawableLeft="@mipmap/ic_zuobiao"
                        android:drawablePadding="@dimen/half_margin"
                        android:text="@string/empty_string"
                        android:textColor="@color/standard_color_h1_dark" />

                    <TextView
                        android:id="@+id/tvPhone"
                        style="@style/TextView.H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/half_margin"

                        android:gravity="center"
                        android:padding="@dimen/half_margin"
                        android:singleLine="true"
                        android:drawableLeft="@mipmap/ic_dianhua"
                        android:drawablePadding="@dimen/half_margin"
                        android:text="@string/empty_string"
                        android:textColor="@color/standard_color_h1_dark" />

                    <TextView
                        android:id="@+id/tvMoney"
                        style="@style/TextView.H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/half_margin"
                        android:padding="@dimen/half_margin"
                        android:singleLine="true"
                        android:drawableLeft="@mipmap/ic_money"
                        android:drawablePadding="@dimen/half_margin"
                        android:text="@string/empty_string"
                        android:textColor="@color/standard_color_h1_dark" />



                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_item_size"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/base_margin"
                android:background="@drawable/shape_lineframe_black_fill"
                android:gravity="center"
                android:text="@string/share_to"
                android:textColor="@color/standard_color_white"
                android:textSize="@dimen/standard_text_size_h1"

                />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>