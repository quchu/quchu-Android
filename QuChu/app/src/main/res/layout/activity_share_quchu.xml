<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/standard_color_white"
    tools:context=".view.activity.QuchuDetailsActivity"
    >


    <include
        layout="@layout/cp_enhanced_toolbar"
        />
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <View
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/vAnchor"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:background="@color/standard_color_h3_dark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:src="@mipmap/ic_timeline_circle_active" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="303dp"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:src="@mipmap/ic_timeline_circle_active" />

                <LinearLayout
                    android:id="@+id/llContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/double_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:src="@mipmap/ic_dingbu" />

                    </LinearLayout>


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivQuchuCover"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/half_margin"
                        android:layout_height="230dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/tvPlaceName"
                                    style="@style/TextView.H1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/empty_string"
                                    android:textColor="@color/standard_color_h1_dark"
                                    android:textSize="28sp"
                                    tools:text="THANK U MUM 炸鸡（罗炳森）" />


                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:max="5"
                                    android:stepSize="0.5"
                                    android:rating="3"
                                    style="@style/CustomProgressBarLarge"
                                    android:id="@+id/prbRating"
                                    android:isIndicator="true"
                                    android:layout_above="@+id/tvTagsLabel"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:id="@+id/tvPlaceLocation"
                                    style="@style/TextView.H3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/half_margin"
                                    android:drawableLeft="@mipmap/ic_zuobiao"
                                    android:drawablePadding="@dimen/half_margin"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/half_margin"
                                    android:paddingBottom="@dimen/half_margin"
                                    android:paddingRight="@dimen/half_margin"
                                    android:singleLine="true"
                                    android:text="@string/empty_string"
                                    android:textColor="@color/standard_color_h1_dark" />

                                <TextView
                                    android:id="@+id/tvPhone"
                                    style="@style/TextView.H3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/half_margin"

                                    android:drawableLeft="@mipmap/ic_dianhua"
                                    android:drawablePadding="@dimen/half_margin"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/half_margin"
                                    android:paddingBottom="@dimen/half_margin"
                                    android:paddingRight="@dimen/half_margin"
                                    android:singleLine="true"
                                    android:text="@string/empty_string"
                                    android:textColor="@color/standard_color_h1_dark" />

                                <TextView
                                    android:id="@+id/tvMoney"
                                    style="@style/TextView.H3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/half_margin"
                                    android:drawableLeft="@mipmap/ic_money"
                                    android:drawablePadding="@dimen/half_margin"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/half_margin"
                                    android:paddingBottom="@dimen/half_margin"
                                    android:paddingRight="@dimen/half_margin"
                                    android:singleLine="true"
                                    android:text="@string/empty_string"
                                    android:textColor="@color/standard_color_h1_dark" />


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_qr_code"

                                    />


                                <TextView
                                    android:id="@+id/tvAuthor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/TextView.H3"
                                    android:layout_marginRight="@dimen/half_margin"
                                    android:text="author"
                                    android:gravity="right"
                                    />

                                <TextView
                                    android:id="@+id/tvDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/TextView.H5"
                                    android:layout_marginRight="@dimen/half_margin"
                                    android:text="author"
                                    android:gravity="right"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/vAnchor"
                    android:layout_below="@+id/llContent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_item_size"
                    android:layout_marginTop="@dimen/base_margin"
                    />
            </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvShare"
        android:layout_below="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_item_size"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@color/standard_color_h1_dark"
        android:gravity="center"
        android:text="@string/share_to"
        android:textColor="@color/standard_color_white"
        android:textSize="@dimen/standard_text_size_h1"
        />
</LinearLayout>