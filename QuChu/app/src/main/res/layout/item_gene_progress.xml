<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <co.quchu.quchu.widget.RoundProgressBar
        android:id="@+id/gene_progress_item_rpb"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        app:progressStyle="Animation"
        app:roundProgressBackground="@android:color/black"
        app:roundProgressColor="@color/standard_color_yellow"
        app:textColor="@color/standard_color_yellow"
        app:textSize="14sp"
        app:textStyle="Num" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gene_progress_item_rpb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/quarter_margin"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/gene_progress_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_gene_explore" />

        <TextView
            android:id="@+id/gene_progress_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="探索"
            android:textColor="@color/planet_text_color_white"
            android:textSize="@dimen/word_size_time" />
    </LinearLayout>
</RelativeLayout>
