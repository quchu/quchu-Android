<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/standard_color_white"
              android:orientation="vertical">

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/half_margin"
      android:background="@color/colorDivider"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingTop="@dimen/base_margin">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_xiaoq_logo"/>

    <TextView
        android:id="@+id/item_message_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
        android:text="【趣处】"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="14sp"
        tools:text="新版本上线啦"/>

    <TextView
        android:id="@+id/item_message_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="12sp"
        tools:text="2016-11-5"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:layout_marginTop="@dimen/base_margin"
      android:orientation="vertical"
      android:paddingBottom="@dimen/base_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_message_cover_img"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_message_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Question Number 1 Question Number 1 Question Number 1 Question Number 1"/>

  </LinearLayout>

</LinearLayout>