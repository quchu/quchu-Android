                  android:layout_height="80dp"
                  android:layout_centerInParent="true"
                  fresco:actualImageScaleType="focusCrop" />

              <ImageView
                  android:layout_width="81dp"
                  android:layout_height="81dp"
                  android:layout_centerInParent="true"
                  android:background="@mipmap/ic_image_rb_shadow"
                  android:src="@color/itemMask_black" />
  -->
            <LinearLayout
                android:id="@+id/widget_image_subtab_right_ll"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <co.quchu.quchu.widget.textcounter.CounterView
                    android:id="@+id/widget_image_subtab_right_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_large_number"
                    fresco:autoStart="false"
                    fresco:incrementValue="1"
                    fresco:startValue="0" />

                <TextView
                    android:id="@+id/widget_image_subtab_right_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="我的收藏"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_subhead_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/widget_animation_index_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_widget_subtab_index" />

