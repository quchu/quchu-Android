<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

  <co.quchu.quchu.widget.SearchView
      android:id="@+id/search_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/search_refresh_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/search_view"
      android:layout_marginTop="@dimen/search_drop_tab_height">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_view"
        android:layout_marginTop="@dimen/search_drop_tab_height"/>

  </android.support.v4.widget.SwipeRefreshLayout>

  <TextView
      android:id="@+id/search_no_data_tv"
      style="@style/TextView.H2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/search_view"
      android:layout_centerInParent="true"
      android:layout_marginTop="@dimen/search_drop_tab_height"
      android:background="@color/colorBackground"
      android:gravity="center"
      android:text="没有该生物"
      android:visibility="gone"/>

  <co.quchu.quchu.widget.DropDownMenu.DropDownMenu
      android:id="@+id/drop_down_menu"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/search_view"
      android:background="@color/transparent"
      app:dddividerColor="@color/colorDivider"
      app:ddmenuSelectedIcon="@mipmap/ic_down"
      app:ddmenuTextSize="13sp"
      app:ddmenuUnselectedIcon="@mipmap/ic_down"
      app:ddtextSelectedColor="@color/standard_color_yellow"
      app:ddtextUnselectedColor="@color/standard_color_h2_dark"
      app:ddunderlineColor="@color/colorDivider"/>

</RelativeLayout>