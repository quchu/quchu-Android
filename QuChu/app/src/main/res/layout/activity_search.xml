<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_activity_bg">

        <LinearLayout
            android:id="@+id/search_title_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heigh"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/user_login_view_bg_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:src="@drawable/ic_pull_menus_search" />

                <EditText
                    android:id="@+id/search_input_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索趣处或活动"
                    android:textColor="@color/text_color_white"
                    android:textColorHint="@color/user_login_text_hint_text_color"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_button_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:text="搜索"
                    android:textColor="@color/gene_textcolor_yellow"
                    android:textSize="@dimen/word_subhead_size" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/search_history_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_title_bar_ll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_title_bar_ll"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:text="历史记录"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/word_subhead_size" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/search_history_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_margin"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/search_history_clear_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_margin"
                    android:background="@color/load_progress_yellow">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/half_margin"
                        android:layout_marginTop="@dimen/half_margin"
                        android:text="清除所有历史记录"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_subhead_size" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/search_result_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_title_bar_ll"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_result_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dialog_margin" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/search_result_isnull_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_title_bar_ll"
           >

            <co.quchu.quchu.widget.VerTextView
                android:id="@+id/search_result_isnull_vtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center" />

        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
