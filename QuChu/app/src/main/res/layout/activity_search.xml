<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_activity_bg">


        <LinearLayout
            android:id="@+id/search_title_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heigh"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/user_login_view_bg_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:src="@mipmap/ic_pull_menus_search" />

                <EditText
                    android:id="@+id/search_input_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索趣处或活动"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textColorHint="@color/user_login_text_hint_text_color"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_button_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:text="取消"
                    android:textColor="@color/standard_color_h1_dark"
                    android:textSize="@dimen/word_subhead_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTags"
            android:layout_below="@+id/search_title_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/search_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:background="@drawable/shape_lineframe_white"
                />
            <TextView
                android:id="@+id/search_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/half_margin"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/search_tag1"
                android:background="@drawable/shape_lineframe_white"
                />
            <TextView
                android:id="@+id/search_tag3"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/search_tag2"
                android:background="@drawable/shape_lineframe_white"
                />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/search_history_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/llTags">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_history_hint_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_title_bar_ll"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="历史记录"
                    android:textColor="@color/standard_color_h2_dark"
                    android:textSize="@dimen/word_subhead_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/search_history_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:overScrollMode="always"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/search_history_clear_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/base_margin"
                    android:background="@color/standard_color_yellow">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/half_margin"
                        android:layout_marginTop="@dimen/half_margin"
                        android:text="清除所有历史记录"
                        android:textColor="@color/standard_color_h1_dark"
                        android:textSize="@dimen/word_subhead_size" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/search_result_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_title_bar_ll"
            android:visibility="gone">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_result_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/base_margin"
                android:overScrollMode="always" />

        </FrameLayout>


    </RelativeLayout>

</RelativeLayout>
