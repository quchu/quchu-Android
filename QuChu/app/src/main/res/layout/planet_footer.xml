<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我关注的"
            android:textColor="@color/planet_text_color_white"
            android:textSize="@dimen/word_size_body" />

        <View style="@style/VerticalLine" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我关注的"
            android:textColor="@color/planet_text_color_white"
            android:textSize="@dimen/word_size_body" />

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin" />

    <!--<RecyclerView-->
    <!--android:id="@+id/planet_gallery"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_marginLeft="@dimen/base_margin"-->
    <!--android:layout_marginRight="@dimen/base_margin"-->
    <!--android:divider="@color/transparent"-->
    <!--android:dividerHeight="4dp" />-->

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/base_margin" />


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/base_margin"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin">

        <LinearLayout
            android:id="@+id/discover_ll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@mipmap/ic_planet_discover" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="发现"
                android:textColor="@color/planet_text_color_white"
                android:textSize="@dimen/word_size_body" />
        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_below="@id/discover_ll" />

        <View
            style="@style/VerticalLine"
            android:layout_toRightOf="@id/discover_ll" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/line_thickness"
            android:layout_toRightOf="@id/discover_ll"
            android:orientation="horizontal"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@mipmap/ic_planet_discover" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="发现"
                android:textColor="@color/planet_text_color_white"
                android:textSize="@dimen/word_size_body" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finds_ll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/discover_ll"
            android:layout_marginBottom="@dimen/line_thickness"
            android:layout_marginTop="@dimen/line_thickness"
            android:orientation="horizontal"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@mipmap/ic_planet_discover" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="发现"
                android:textColor="@color/planet_text_color_white"
                android:textSize="@dimen/word_size_body" />
        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_below="@id/finds_ll" />
    </android.support.percent.PercentRelativeLayout>

    <!--<View-->
    <!--style="@style/HorizontalLine"-->
    <!--android:layout_marginBottom="@dimen/base_margin"-->
    <!--android:layout_marginLeft="@dimen/base_margin"-->
    <!--android:layout_marginRight="@dimen/base_margin" />-->


</LinearLayout>
