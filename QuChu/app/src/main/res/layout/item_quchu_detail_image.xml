<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <co.quchu.quchu.widget.WrapContentViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vpGallery"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/translucent_dark"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/half_margin"
            >
            <TextView
                android:id="@+id/detail_store_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:layout_marginLeft="@dimen/base_margin"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_subhead_size"
                />
            <TextView
                android:layout_alignTop="@id/detail_store_name_tv"
                android:id="@+id/detail_avg_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/detail_avg_price_text_bg"
                android:layout_marginRight="@dimen/base_margin"
                android:textColor="@color/text_color_white"
                android:text="Null"
                android:textSize="@dimen/word_size_body" />
        </RelativeLayout>

        <co.quchu.quchu.widget.ratingbar.ProperRatingBar
            android:id="@+id/detail_suggest_prb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:layout_marginTop="@dimen/quarter_margin"
            android:layout_marginLeft="@dimen/base_margin"
            card_view:prb_clickable="false"
            card_view:prb_defaultRating="4"
            card_view:prb_tickSpacing="3dip"
            card_view:prb_tickNormalDrawable="@mipmap/ic_like_fill"
            card_view:prb_tickSelectedDrawable="@mipmap/ic_like_fill_checked"
            card_view:prb_totalTicks="5" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_marginBottom="@dimen/half_margin"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/recommend_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:background="@drawable/shape_lineframe_white"
                />
            <TextView
                android:id="@+id/recommend_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/half_margin"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:layout_toRightOf="@id/recommend_tag1"
                android:background="@drawable/shape_lineframe_white"
                />
            <TextView
                android:id="@+id/recommend_tag3"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/quarter_margin"
                android:paddingBottom="@dimen/quarter_margin"
                android:paddingLeft="@dimen/half_margin"
                android:paddingRight="@dimen/half_margin"
                android:textSize="@dimen/word_size_time"
                android:visibility="invisible"
                android:layout_toRightOf="@id/recommend_tag2"
                android:background="@drawable/shape_lineframe_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 of 4"
                android:id="@+id/tvGalleryIndicator"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/quarter_margin"
                android:drawableLeft="@mipmap/ic_gallery_indicator_small"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>