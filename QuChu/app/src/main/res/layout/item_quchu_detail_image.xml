<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <co.quchu.quchu.widget.WrapContentViewPager
            android:id="@+id/vpGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <co.quchu.quchu.widget.SimpleIndicatorView
            android:id="@+id/siv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlBanner"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        >

        <TextView

            android:id="@+id/detail_store_name_tv"
            style="@style/TextView.H1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/half_margin"
            android:text="@string/empty_string"
            android:textSize="@dimen/standard_text_size_h0"

            />


        <RelativeLayout
            android:id="@+id/rlTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detail_store_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommend_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_lineframe_black_thin"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="4dp"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/recommend_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_toRightOf="@id/recommend_tag1"
                android:background="@drawable/shape_lineframe_black_thin"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="4dp"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/recommend_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_toRightOf="@id/recommend_tag2"
                android:background="@drawable/shape_lineframe_black_thin"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="4dp"
                android:textColor="@color/standard_color_h2_dark"
                android:textSize="@dimen/standard_text_size_h4"
                android:visibility="gone" />

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAdditionalInfo"
            android:layout_below="@id/rlTags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quchu_detail_addtionalinfo_icon_size"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_marginBottom="@dimen/half_margin"
            android:orientation="vertical"
            android:gravity="center"
            />

    </RelativeLayout>

</RelativeLayout>