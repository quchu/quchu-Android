<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/standard_color_white"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <co.quchu.quchu.widget.WrapContentViewPager
            android:id="@+id/vpGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <co.quchu.quchu.widget.SimpleIndicatorView
            android:id="@+id/siv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlBanner"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        >

        <TextView

            android:id="@+id/detail_store_name_tv"
            style="@style/TextView.H1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/base_margin"
            android:text="@string/empty_string"
            android:textSize="@dimen/standard_text_size_h0"
            />


        <RelativeLayout
            android:id="@+id/rlTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detail_store_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_margin"
            android:orientation="horizontal">


            <co.quchu.quchu.widget.TagCloudView
                android:id="@+id/tcvTags"
                card_view:tcvBackground="@drawable/shape_lineframe_black_thin"
                card_view:tcvTextSize="5dp"
                card_view:tcvBorder = "8dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:tcvCanTagClick="false"
                card_view:tcvTextColor="@color/standard_color_h2_dark"
                />

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAdditionalInfo"
            android:layout_below="@id/rlTags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quchu_detail_addtionalinfo_icon_size"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_marginBottom="@dimen/half_margin"
            android:orientation="vertical"
            android:gravity="center"
            />

    </RelativeLayout>

</RelativeLayout>