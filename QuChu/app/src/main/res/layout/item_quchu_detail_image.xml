<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"

    android:paddingLeft="@dimen/base_margin"
    android:paddingRight="@dimen/base_margin"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_store_name_tv"
        style="@style/TextView.H1"
        android:textSize="@dimen/standard_text_size_h0"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/empty_string"

        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_store_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommend_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_lineframe_black"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:paddingTop="4dp"
            android:textColor="@color/standard_color_black"
            android:textSize="@dimen/standard_text_size_h4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recommend_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_toRightOf="@id/recommend_tag1"
            android:background="@drawable/shape_lineframe_black"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:paddingTop="4dp"
            android:textColor="@color/standard_color_black"
            android:textSize="@dimen/standard_text_size_h4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recommend_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_toRightOf="@id/recommend_tag2"
            android:background="@drawable/shape_lineframe_black"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:paddingTop="4dp"
            android:textColor="@color/standard_color_black"
            android:textSize="@dimen/standard_text_size_h4"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>