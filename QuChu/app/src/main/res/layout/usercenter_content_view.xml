<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_center_following_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TA关注的"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />

        <View
            style="@style/VerticalLine"
            android:layout_width="1dp"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin" />


        <TextView
            android:id="@+id/user_center_followed_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注TA的"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin" />

    <LinearLayout
        android:id="@+id/user_center_postcard_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="@dimen/base_margin"
            android:src="@drawable/ic_planet_postcaard" />

        <TextView
            android:id="@+id/user_center_pnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_subhead_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:text="明信片"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin" />

    <LinearLayout
        android:id="@+id/user_center_favorite_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="@dimen/base_margin"
            android:src="@drawable/ic_planet_collect" />

        <TextView
            android:id="@+id/user_center_favoritenum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_subhead_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:text="收藏的趣处"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_body" />

    </LinearLayout>
    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin" />
</LinearLayout>