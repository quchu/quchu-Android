<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

  <include
      layout="@layout/activity_main_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:background="@color/standard_color_white"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

    <co.quchu.quchu.widget.DrawerHeaderView
        android:id="@+id/drawerHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="vertical">

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divImage="@drawable/ic_wodeshoucang"
            app:divText="我的收藏"/>

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemUserCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:divImage="@drawable/ic_gerenzhongxin"
            app:divText="个人中心"/>

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divImage="@drawable/ic_xiaoxizhongxin"
            app:divText="消息中心"/>

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divImage="@drawable/ic_yijianbangzhu"
            app:divText="意见帮助"/>

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divImage="@drawable/ic_wodeshezhi"
            app:divText="我的设置"/>

        <co.quchu.quchu.widget.DrawerItemView
            android:id="@+id/drawerItemShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divImage="@drawable/ic_fenxiangapp"
            app:divText="分享App"/>

      </LinearLayout>

    </RelativeLayout>

  </LinearLayout>

</android.support.v4.widget.DrawerLayout>
