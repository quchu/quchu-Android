<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_heigh"
    tools:showIn="@layout/activity_recommend"
    >

    <RelativeLayout
        android:id="@+id/recommend_title_location_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recommend_title_location_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginStart="@dimen/base_margin"
            android:src="@drawable/ic_landscape"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/planet_text_color_white"
        android:textSize="@dimen/word_title_body"
        android:visibility="invisible" />

    <co.quchu.quchu.widget.RecommendTitleGroup
        android:id="@+id/recommend_title_center_rtg"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <co.quchu.quchu.widget.MoreButtonView
        android:id="@+id/recommend_title_more_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:src="@mipmap/ic_title_more" />
</RelativeLayout>