<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/standard_color_white"
              android:orientation="vertical">

  <include layout="@layout/cp_enhanced_toolbar"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <RelativeLayout
          android:id="@+id/me_fragment_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="30dp"/>

      <LinearLayout
          android:id="@+id/user_operate_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/me_fragment_container"
          android:layout_marginTop="7dp"
          android:orientation="vertical"
          android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standard_color_white"
            android:gravity="center"
            android:orientation="horizontal">

          <co.quchu.quchu.widget.MeItemView
              android:id="@+id/me_info_view"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:miImage="@mipmap/ic_gerenzhongxin"
              app:miText="个人信息"/>

          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"/>

          <co.quchu.quchu.widget.MeItemView
              android:id="@+id/me_friend_view"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:miImage="@mipmap/ic_quyouquan"
              app:miText="趣友圈"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standard_color_white"
            android:orientation="horizontal">

          <co.quchu.quchu.widget.MeItemView
              android:id="@+id/me_social_account_view"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:miImage="@mipmap/ic_bangding"
              app:miText="绑定社交账号"/>

          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"/>

          <co.quchu.quchu.widget.MeItemView
              android:id="@+id/me_change_password_view"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              app:miImage="@mipmap/ic_xiugaimima"
              app:miText="修改密码"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBackground"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standard_color_white">

          <TextView
              android:id="@+id/user_logout_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="15dp"
              android:layout_marginTop="15dp"
              android:background="@drawable/shape_corner_grey"
              android:gravity="center"
              android:paddingBottom="8dp"
              android:paddingLeft="46dp"
              android:paddingRight="46dp"
              android:paddingTop="8dp"
              android:text="退出登录"
              android:textColor="@color/standard_color_h3_dark"
              android:textSize="14sp"/>

        </RelativeLayout>

      </LinearLayout>

      <RelativeLayout
          android:id="@+id/user_mask_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/user_operate_layout"
          android:layout_alignTop="@+id/user_operate_layout"
          android:background="@mipmap/bg_user_center"
          android:visibility="gone">

        <TextView
            android:id="@+id/user_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rectangle_wireframe_yellow_fill"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="58dp"
            android:paddingRight="58dp"
            android:paddingTop="8dp"
            android:text="登录"
            android:textColor="@color/standard_color_h1_dark"
            android:textSize="14sp"/>

      </RelativeLayout>

    </RelativeLayout>

  </ScrollView>

</LinearLayout>
