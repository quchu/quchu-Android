<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/root_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:fitsSystemWindows="true"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="@dimen/cardview_elevation"
        card_view:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/animation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/postcard_detail_finish_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:layout_marginRight="@dimen/base_margin"
                    android:layout_marginTop="@dimen/base_margin"
                    android:text="完成"
                    android:textColor="@color/black"
                    android:textSize="@dimen/word_subhead_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/half_margin"
                android:background="@drawable/shape_postcard_detail_white_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/postcard_detail_photo_sdv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/half_margin"
                        android:layout_weight="1.2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/half_margin"
                        android:layout_weight="1.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/postcard_detail_pname_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/quarter_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/word_subhead_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postcard_detail_paddress_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tow_dp_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/word_subhead_size" />

                        <TextView
                            android:id="@+id/postcard_detail_enter_place_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/quarter_margin"
                            android:background="@drawable/shape_postcard_detail_text_enter_place"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="进入趣处"
                            android:textColor="@color/gene_textcolor_yellow"
                            android:textSize="@dimen/word_size_body"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postcard_detail_address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/quarter_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/user_login_text_hint_text_color"
                            android:textSize="@dimen/word_subhead_size" />

                        <TextView
                            android:id="@+id/postcard_detail_tel_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tow_dp_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/user_login_text_hint_text_color"
                            android:textSize="@dimen/word_subhead_size" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_margin"
                    android:layout_marginTop="@dimen/dialog_margin">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_my_postcard_avatar_sdv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        card_view:actualImageScaleType="centerCrop"
                        card_view:roundAsCircle="true"
                        card_view:roundingBorderWidth="2dp" />

                    <TextView
                        android:id="@+id/item_my_postcard_card_tiem_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/base_margin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_size_body" />

                    <TextView
                        android:id="@+id/item_my_postcard_card_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/quarter_margin"
                        android:layout_marginRight="@dimen/quarter_margin"
                        android:layout_marginTop="@dimen/quarter_margin"
                        android:layout_toLeftOf="@id/item_my_postcard_card_tiem_tv"
                        android:layout_toRightOf="@id/item_my_postcard_avatar_sdv"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/word_size_body" />

                    <co.quchu.quchu.widget.ratingbar.ProperRatingBar
                        android:id="@+id/item_my_postcard_card_prb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_my_postcard_card_nickname_tv"
                        android:layout_marginLeft="@dimen/quarter_margin"
                        android:layout_marginTop="@dimen/half_margin"
                        android:layout_toRightOf="@id/item_my_postcard_avatar_sdv"
                        card_view:prb_clickable="false"
                        card_view:prb_defaultRating="4"
                        card_view:prb_tickNormalDrawable="@drawable/ic_ratingbar_off"
                        card_view:prb_tickSelectedDrawable="@drawable/ic_ratingbar_on"
                        card_view:prb_tickSpacing="2dp"
                        card_view:prb_totalTicks="5" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/postcard_comment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/word_size_body" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>