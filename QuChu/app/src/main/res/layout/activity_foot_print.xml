<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/cp_enhanced_toolbar" />


    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/TextView.H3"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_footprint"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFootPrint"
        android:paddingLeft="@dimen/quarter_margin"
        android:paddingRight="@dimen/quarter_margin"
        android:layout_above="@+id/tvAddFootprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar" />

    <TextView
        android:id="@+id/tvAddFootprint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_item_size"
        android:textColor="@color/standard_color_white"
        android:layout_alignParentBottom="true"
        android:background="@color/appBackground_dark"
        android:gravity="center"
        android:text="@string/add_foot_print_long"
        />


</RelativeLayout>