<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="0dp"
        app:expandedTitleMarginStart="0dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/standard_color_white"
          android:fitsSystemWindows="true"
          android:layout_marginTop="?actionBarSize"
          app:contentScrim="@color/standard_color_white"
          app:layout_collapseMode="parallax">

        <RelativeLayout
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/standard_color_white">

          <android.support.v4.view.ViewPager
              android:id="@+id/user_center_viewpager"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_above="@+id/user_center_indicator"/>

          <co.quchu.quchu.widget.CircleIndicator
              android:id="@+id/user_center_indicator"
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              app:ci_drawable="@drawable/yellow_radius"
              app:ci_drawable_unselected="@drawable/grey_radius"/>

        </RelativeLayout>

        <View
            android:id="@+id/line_user_center"
            style="@style/HorizontalLine"
            android:layout_below="@id/header_view"/>

        <LinearLayout
            android:id="@+id/container_none"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/line_user_center"
            android:background="@color/standard_color_white"
            android:orientation="horizontal">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical">

            <TextView
                android:id="@+id/follow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/standard_color_h2_dark"/>

            <View
                android:id="@+id/follow_indicator_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/standard_color_h1_dark"
                android:visibility="invisible"/>

          </LinearLayout>

          <View style="@style/VerticalLine"/>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical">

            <TextView
                android:id="@+id/friend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="趣粉"
                android:textColor="@color/standard_color_h2_dark"/>

            <View
                android:id="@+id/friend_indicator_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/standard_color_h1_dark"
                android:visibility="invisible"/>

          </LinearLayout>

        </LinearLayout>

      </RelativeLayout>

      <co.quchu.quchu.base.EnhancedToolbar
          android:id="@+id/enhancedToolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/standard_color_white"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"/>

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

  <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/standard_color_white"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

  <View
      style="@style/HorizontalLine"
      android:layout_below="@id/container_none"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>
