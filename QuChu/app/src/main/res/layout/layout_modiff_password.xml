<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:text="修改密码"
        android:textColor="@color/account_setting_text_hint_color"
        android:textSize="@dimen/word_subhead_size" />

    <TextView
        android:id="@+id/account_setting_newpwd_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:text="新　密　码"
        android:textColor="@color/black"
        android:textSize="@dimen/word_size_body" />


    <EditText
        android:id="@+id/account_setting_new_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
        android:layout_marginTop="@dimen/half_margin"
        android:background="@null"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:textColor="@color/account_setting_text_hint_color"
        android:textSize="@dimen/word_size_body" />


    <TextView
        android:id="@+id/account_setting_realpwd_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_setting_newpwd_hint"
        android:layout_marginTop="@dimen/half_margin"
        android:text="确认新密码"
        android:textColor="@color/black"
        android:textSize="@dimen/word_size_body" />


    <EditText
        android:id="@+id/account_setting_new_pwd_again_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_setting_newpwd_hint"
        android:layout_marginLeft="@dimen/account_setting_phone_marginleft"
        android:layout_marginTop="@dimen/half_margin"
        android:background="@null"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:textColor="@color/account_setting_text_hint_color"
        android:textColorHint="@color/account_setting_text_hint_color"
        android:textSize="@dimen/word_size_body" />

    <View style="@style/AccountBHl" />

    <View
        style="@style/AccountBHl"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/account_setting_newpwd_hint" />
</RelativeLayout>