<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:id="@+id/user_login_main_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/ImageSubTabLayoutHeight"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="#33ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_login_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/half_margin"
            android:text="填写手机号码登录或注册"
            android:textColor="@color/user_login_text_hint_text_color"
            android:textSize="@dimen/word_size_body" />
    </LinearLayout>
</RelativeLayout>
