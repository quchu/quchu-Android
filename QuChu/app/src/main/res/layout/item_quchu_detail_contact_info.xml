<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detail_store_address_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_store_address_tv"
                style="@style/DetailTextStyle_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_size_body" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_detail_right_arrow" />
        </LinearLayout>

        <View style="@style/DetailHorizontalLine" />

        <LinearLayout
            android:id="@+id/detail_store_phone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_store_phone_tv"
                style="@style/DetailTextStyle_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_weight="1"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/word_size_body" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/half_margin"
                android:src="@mipmap/ic_detail_right_arrow" />
        </LinearLayout>

    </LinearLayout>