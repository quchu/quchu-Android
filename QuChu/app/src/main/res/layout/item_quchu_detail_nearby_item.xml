<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackground"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardPreventCornerOverlap="false">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:placeholderImage="@drawable/ic_image_empty"
        app:failureImage="@drawable/ic_image_empty"
        app:actualImageScaleType="focusCrop"
        app:placeholderImageScaleType="focusCrop"
        app:roundedCornerRadius="4dp"/>
    <TextView
        android:id="@+id/tvName"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucent_white"
        android:layout_alignParentBottom="true"
        android:minLines="2"
        android:maxLines="2"
        android:paddingLeft="@dimen/half_margin"
        android:paddingRight="@dimen/half_margin"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/quarter_margin"
        android:paddingBottom="@dimen/quarter_margin"
        android:textSize="@dimen/word_size_time"
        android:textColor="@color/black"
        />


</android.support.v7.widget.CardView>