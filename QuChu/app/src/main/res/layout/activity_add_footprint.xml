<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/card_view_radius_dp"
    android:layout_margin="@dimen/base_margin"
    >

    <RelativeLayout
        android:padding="@dimen/base_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etContent"
            android:textColorHint="@color/translucent_dark"
            android:hint="@string/hint_add_footprint"
            android:minLines="5"
            android:maxLength="140"
            android:gravity="top|left"
            android:textSize="@dimen/word_size_body"
            android:textColor="@color/appBackground"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/etContent"
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="4"
            tools:listitem="@layout/item_find_position_image"
            android:layout_above="@+id/llBottomArea"
            android:overScrollMode="always" />


        <LinearLayout
            android:layout_marginTop="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/llBottomArea"
            >
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:padding="@dimen/half_margin"
                android:gravity="center"
                android:textColor="@color/appBackground"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/tvPickFromMap"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/half_margin"
                android:text="..."
                android:textColor="@color/appBackground"
                android:maxLines="1"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>