<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/cp_enhanced_toolbar" />

    <LinearLayout
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar">

        <RatingBar
            android:id="@+id/rbRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="5"
            android:paddingTop="@dimen/dialog_margin"
            android:paddingBottom="@dimen/base_margin"
            android:layout_centerHorizontal="true"
            android:stepSize="1"
            android:rating="0"
            style="@style/CustomProgressBar"/>


        <EditText
            android:layout_below="@id/rbRating"
            android:id="@+id/etContent"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_textfield_ltgray"
            android:gravity="top|left"
            android:hint="@string/hint_add_footprint"
            android:maxLines="5"
            android:minLines="5"
            android:padding="@dimen/base_margin"
            android:textColor="@color/standard_color_h3_dark"
            android:textColorHint="@color/translucent_dark"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:textSize="@dimen/word_size_body" />
        <TextView
            android:id="@+id/textLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etContent"
            android:layout_alignRight="@+id/etContent"
            android:layout_marginBottom="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:text="@string/hint_max_text_length"
            android:textColor="@color/standard_color_h3_dark"
            android:textSize="@dimen/word_size_minimum" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBorder"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTags"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="3"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        tools:listitem="@layout/item_tags_filter"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBorder"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSubmit"
        android:layout_below="@id/edit_container"
        android:layout_marginTop="@dimen/base_margin"
        android:background="@color/standard_color_white"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="4"
        tools:listitem="@layout/item_find_position_image" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvSubmit"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_item_size"
        android:text="@string/submitRating"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="@dimen/standard_text_size_h1"
        android:background="@color/standard_color_yellow"
        android:textStyle="bold"
        android:textColor="@color/standard_color_white"
        />

</RelativeLayout>