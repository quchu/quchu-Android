<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/standard_color_white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/base_margin"
              android:paddingTop="@dimen/base_margin">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:placeholderImage="@drawable/ic_image_empty"
        app:viewAspectRatio="1.4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:id="@+id/desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/base_margin"
          android:layout_marginRight="@dimen/base_margin"
          android:maxLines="2"
          android:textColor="@color/standard_color_h1_dark"
          android:textSize="@dimen/standard_text_size_h1"
          tools:text="标题"/>

      <TextView
          android:id="@+id/address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/base_margin"
          android:layout_marginRight="@dimen/base_margin"
          android:paddingBottom="@dimen/half_margin"
          android:paddingTop="@dimen/half_margin"
          android:singleLine="true"
          android:textColor="@color/standard_color_h2_dark"
          android:textSize="@dimen/standard_text_size_h2"
          android:visibility="visible"
          tools:text="厦门观音山"
          tools:visibility="visible"/>

      <co.quchu.quchu.widget.TagCloudView
          android:id="@+id/tag"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/address"
          android:layout_marginLeft="@dimen/base_margin"
          android:layout_marginRight="@dimen/base_margin"
          android:layout_marginTop="@dimen/half_margin"
          app:tcvBackground="@drawable/shape_lineframe_gray_cap"
          app:tcvBorder="8dp"
          app:tcvCanTagClick="false"
          app:tcvItemBorderHorizontal="5dp"
          app:tcvSingleLine="true"
          app:tcvTextColor="@color/standard_color_h3_dark"
          app:tcvTextSize="4dp"/>

    </LinearLayout>

  </LinearLayout>

  <View
      style="@style/HorizontalDivider"
      android:layout_marginTop="@dimen/base_margin"/>

</LinearLayout>
