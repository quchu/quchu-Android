<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:paddingLeft="60dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

  <ImageView
      android:id="@+id/drawerItemImg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/drawerTitleTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"/>

  <View
      android:id="@+id/unReadMassageView"
      android:layout_width="5dp"
      android:layout_height="5dp"
      android:layout_marginLeft="5dp"
      android:layout_toRightOf="@+id/drawerTitleTv"
      android:background="@drawable/shape_round_red"
      android:textColor="@color/standard_color_white"
      android:visibility="invisible"/>

</LinearLayout>