<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/base_margin"
    android:orientation="horizontal">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical"
      >
      <co.quchu.quchu.widget.RoundProgressView
          android:id="@+id/rpvItemLeft"
          android:layout_width="60dp"
          android:layout_height="60dp"
          app:roundProgressBackground="@color/transparent"
          app:roundProgressColor="@color/standard_color_yellow"
          app:roundColor = "@color/translucent_white"
          app:roundWidth="4dp"
          app:textSize="@dimen/word_size_body"
          app:textStyle="Num" />
      <TextView
          android:id="@+id/tvRatingLeft"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/standard_color_yellow"
          android:gravity="center"
          android:layout_marginTop="@dimen/quarter_margin"
          />
  </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
    <co.quchu.quchu.widget.RoundProgressView
        android:id="@+id/rpvItemMiddle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:roundProgressBackground="@color/transparent"
        app:roundProgressColor="@color/standard_color_yellow"
        app:roundColor = "@color/translucent_white"
        app:roundWidth="4dp"
        app:textSize="@dimen/word_size_body"
        app:textStyle="Num" />
        <TextView
            android:id="@+id/tvRatingMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/standard_color_yellow"
            android:gravity="center"
            android:layout_marginTop="@dimen/quarter_margin"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
    <co.quchu.quchu.widget.RoundProgressView
        android:id="@+id/rpvItemRight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:roundProgressBackground="@color/transparent"
        app:roundProgressColor="@color/standard_color_yellow"
        app:roundColor = "@color/translucent_white"
        app:roundWidth="4dp"
        app:textSize="@dimen/word_size_body"
        app:textStyle="Num" />
        <TextView
            android:id="@+id/tvRatingRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/standard_color_yellow"
            android:gravity="center"
            android:layout_marginTop="@dimen/quarter_margin"
            />
    </LinearLayout>
</LinearLayout>