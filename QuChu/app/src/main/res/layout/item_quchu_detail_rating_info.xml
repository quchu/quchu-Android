<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/base_margin"
    android:orientation="horizontal">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      >
      <co.quchu.quchu.widget.RoundProgressView
          android:id="@+id/rpvItemLeft"
          android:layout_width="80dp"
          android:layout_height="80dp"
          app:progressStyle="Default"
          app:roundProgressBackground="@color/transparent"
          app:roundProgressColor="@color/planet_progress_yellow"
          app:roundColor = "@color/planet_progress_yellow"
          app:roundWidth="4dp"
          app:textSize="@dimen/word_size_body"
          app:textStyle="Num" />
  </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >
    <co.quchu.quchu.widget.RoundProgressView
        android:id="@+id/rpvItemMiddle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:roundProgressBackground="@color/transparent"
        app:roundProgressColor="@color/planet_progress_yellow"
        app:roundColor = "@color/planet_progress_yellow"
        app:progressStyle="Default"
        app:roundWidth="4dp"
        app:textSize="@dimen/word_size_body"
        app:textStyle="Num" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >
    <co.quchu.quchu.widget.RoundProgressView
        android:id="@+id/rpvItemRight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:roundProgressBackground="@color/transparent"
        app:roundProgressColor="@color/planet_progress_yellow"
        app:roundColor = "@color/planet_progress_yellow"
        app:progressStyle="Default"
        app:roundWidth="4dp"
        app:textSize="@dimen/word_size_body"
        app:textStyle="Num" />
    </LinearLayout>
</LinearLayout>