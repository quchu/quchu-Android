<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/half_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <co.quchu.quchu.widget.RoundProgressView
            android:id="@+id/rpvItemLeft"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tvRatingLeft"
            style="@style/TextView.H3"
            android:layout_marginTop="@dimen/quarter_margin" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <co.quchu.quchu.widget.RoundProgressView
            android:id="@+id/rpvItemMiddle"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tvRatingMiddle"
            style="@style/TextView.H3"
            android:layout_marginTop="@dimen/quarter_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <co.quchu.quchu.widget.RoundProgressView
            android:id="@+id/rpvItemRight"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tvRatingRight"
            style="@style/TextView.H3"
            android:layout_marginTop="@dimen/quarter_margin" />
    </LinearLayout>
</LinearLayout>