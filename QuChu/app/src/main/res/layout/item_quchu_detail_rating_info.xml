<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/base_margin"
              android:layout_marginRight="@dimen/base_margin"
              android:orientation="vertical">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合得分"
        android:textColor="@color/standard_color_h1_dark"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(取各网相加的平均值)"
        android:textColor="@color/standard_color_h3_dark"
        android:textSize="12sp"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/half_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingBottom="@dimen/half_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <RatingBar
          android:id="@+id/rbRating"
          style="@style/CustomProgressBar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:isIndicator="true"
          android:max="5"
          android:rating="3"
          android:stepSize="1"/>

      <TextView
          android:id="@+id/tvRatingCount"
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/half_margin"
          android:textColor="@color/standard_color_h3_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <TextView
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="近期评价: "
          android:textColor="@color/standard_color_h0_dark"/>

      <ImageView
          android:id="@+id/ivTrend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_rate_rise"/>

      <TextView
          android:id="@+id/tvRatingChange"
          style="@style/TextView.H3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/standard_color_red"
          tools:text="1.2分"/>

    </LinearLayout>

  </LinearLayout>

  <View
      style="@style/HorizontalDividerDark"
      android:layout_marginBottom="@dimen/half_margin"
      android:layout_marginTop="@dimen/base_margin"/>

</LinearLayout>
