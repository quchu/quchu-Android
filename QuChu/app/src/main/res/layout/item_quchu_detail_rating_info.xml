<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/double_margin">

    <TextView
        android:id="@+id/tvActivityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quchu_intro"
        android:layout_marginLeft="@dimen/base_margin"
        style="@style/TextView.H2"
        />

    <TextView
        android:id="@+id/tvActivityDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quchu_intro"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginBottom="@dimen/base_margin"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        style="@style/TextView.H3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论"
            style="@style/TextView.H2"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <RatingBar
                android:id="@+id/rbRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:stepSize="0.5"
                android:rating="3"
                android:isIndicator="true"
                style="@style/CustomProgressBar"/>

            <TextView
                android:id="@+id/tvRatingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/standard_text_size_h4"
                android:textColor="@color/standard_color_h3_dark"
                />
        </LinearLayout>

        <co.quchu.quchu.widget.TagCloudView
            android:id="@+id/tcvTags"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            card_view:tcvBackground="@drawable/shape_lineframe_black_thin"
            card_view:tcvTextSize="5dp"
            card_view:tcvBorder = "8dp"

            android:layout_marginLeft="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:tcvCanTagClick="false"
            card_view:tcvTextColor="@color/standard_color_h2_dark"
            />
    </LinearLayout>
</LinearLayout>
