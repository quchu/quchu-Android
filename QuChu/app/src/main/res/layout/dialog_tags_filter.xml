<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/appBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tags_filter_title"
        android:textSize="@dimen/word_title_body"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/half_margin"
        />

    <CheckBox
        android:id="@+id/cbSelectAll"
        android:text="@string/select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tc_light_n_dark_selector"
        android:layout_marginLeft="28dp"
        android:button="@null"
        android:background="@drawable/simple_shape_selector_white"
        android:layout_above="@id/rvTags"
        android:textSize="@dimen/word_size_body"
        android:paddingTop="@dimen/tow_dp_margin"
        android:paddingBottom="@dimen/tow_dp_margin"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        android:layout_marginBottom="@dimen/half_margin"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="5"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        tools:listitem="@layout/item_tags_filter"
        />

    <ImageView
        android:id="@+id/ivFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_confirm"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dialog_margin"
        />
</RelativeLayout>