<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    tools:context="co.quchu.quchu.view.activity.FindPositionActivity">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:src="@mipmap/ic_menus_title_more" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/new_recommend_tablayout_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/ic_pull_menus_add"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="我发现一个新趣处"
                android:textColor="@color/white"
                android:textSize="@dimen/word_title_body" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/find_position_bg_white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/nameNone"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="趣处名称"
                    android:textColor="#000000"
                    android:textSize="@dimen/word_size_body" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nameNone"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="填写趣处名称"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:minHeight="@dimen/subTabLayoutHeight"
                    android:textSize="@dimen/word_size_time" />


                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/nameNone"
                    android:layout_marginTop="5dp"
                    android:background="@color/line_color" />


                <TextView
                    android:id="@+id/addressNone"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/line1"
                    android:gravity="center"
                    android:text="趣处地址"
                    android:textColor="#000000"
                    android:textSize="@dimen/word_size_body" />

                <EditText
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/addressNone"
                    android:layout_toRightOf="@id/addressNone"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="填写趣处地址"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:minHeight="@dimen/subTabLayoutHeight"
                    android:textSize="@dimen/word_size_time" />


                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/addressNone"
                    android:layout_marginTop="5dp"
                    android:background="@color/line_color" />

                <EditText
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/recyclerView"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="写两行以上的内容,更容易被我们采纳~"
                    android:maxLength="140"
                    android:textSize="@dimen/word_size_body" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="48dp"
                    android:overScrollMode="always"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/item_find_position_image" />

                <TextView
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f4e727"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/black"
                    android:textSize="@dimen/word_size_time" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
