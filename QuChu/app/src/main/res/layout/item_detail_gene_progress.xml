<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_recommend_card_progress_one_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_card_progress_name_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/half_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_time" />

        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_progressbar_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_recommend_card_progress_two_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_card_progress_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/half_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_time" />

        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_progressbar_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_recommend_card_progress_three_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_card_progress_name_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/half_margin"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/word_size_time" />

        <co.quchu.quchu.widget.HorizontalNumProgressBar
            android:id="@+id/item_recommend_card_progress_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_progressbar_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>