<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    >


  <RelativeLayout
      android:id="@+id/bottom_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/llStart"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/base_margin"
      android:layout_marginBottom="@dimen/base_margin"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivFrom"
        android:layout_width="@dimen/comment_from_avatar_size"
        android:layout_height="@dimen/comment_from_avatar_size"
        />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_toRightOf="@id/ivFrom"
        tools:text="来自大众点评"
        android:layout_centerVertical="true"
        style="@style/TextView.H3"
        />

  </RelativeLayout>

  <LinearLayout
      android:id="@+id/llStart"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginTop="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvAvatar"
        android:layout_width="@dimen/comment_users_avatar_size"
        android:layout_height="@dimen/comment_users_avatar_size"
        android:src="@mipmap/ic_launcher"
        fresco:roundAsCircle="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/base_margin"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tvUsername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="UserName"
          style="@style/TextView.H2"
          />


      <TextView
          android:id="@+id/tvDate"
          android:layout_marginTop="@dimen/quarter_margin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Date"
          android:layout_gravity="top"
          style="@style/TextView.H3"
          />
    </LinearLayout>



  </LinearLayout>

  <LinearLayout
      android:id="@+id/llComments"
      android:layout_marginTop="@dimen/base_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_below="@+id/llStart"
      android:layout_marginRight="@dimen/base_margin"
      android:background="@drawable/shape_lineframe_common_gray_fill"
      android:orientation="vertical"
      android:padding="@dimen/base_margin"

      >

    <TextView
        android:id="@+id/tvUserComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        tools:text="Comment"
        style="@style/TextView.H3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvImages"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="0.25"
          tools:listitem="@layout/rc_item_image_message"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_weight="0.75"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:visibility="gone"
        tools:text="Comment"
        tools:visibility="visible"
        style="@style/TextView.H2"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/tvRatingCount"
      android:layout_below="@+id/llComments"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="共1200人评价"
      android:visibility="gone"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/half_margin"
      android:layout_marginTop="@dimen/half_margin"
      android:textColor="@color/standard_color_h3_dark"
      android:textSize="@dimen/standard_text_size_h3"
      />


  <!--<View-->
      <!--android:id="@+id/vDivider"-->
      <!--android:layout_marginLeft="@dimen/base_margin"-->
      <!--android:layout_marginRight="@dimen/base_margin"-->
      <!--style="@style/HorizontalLine"-->
      <!--/>-->



</RelativeLayout>