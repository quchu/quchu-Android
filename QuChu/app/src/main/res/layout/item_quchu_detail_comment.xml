<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/sdvAvatar"
      android:layout_marginTop="@dimen/double_margin"
      android:layout_marginBottom="@dimen/base_margin"
      android:layout_width="@dimen/comment_users_avatar_size_large"
      android:layout_height="@dimen/comment_users_avatar_size_large"
      android:src="@drawable/ic_launcher"
      fresco:placeholderImage="@color/translucent_dark"
      fresco:roundAsCircle="true"
      />

  <TextView
      android:id="@+id/tvUsername"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      tools:text="UserName"
      style="@style/TextView.H2"
      />


  <TextView
      android:id="@+id/tvDate"
      android:layout_marginTop="@dimen/quarter_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Date"
      android:layout_gravity="top"
      style="@style/TextView.H3"
      android:gravity="center_horizontal"

      />
  <TextView
      android:id="@+id/tvUserComment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:lineSpacingExtra="6dp"
      android:layout_marginTop="@dimen/base_margin"
      tools:text="Comment"
      android:layout_marginLeft="@dimen/double_margin"
      android:layout_marginRight="@dimen/double_margin"
      android:gravity="center_horizontal"
      style="@style/TextView.H3"
      />


  <TextView
      android:id="@+id/tvRatingCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="共1200人评价"
      android:layout_marginBottom="@dimen/base_margin"
      android:padding="@dimen/half_margin"
      android:layout_marginTop="@dimen/half_margin"
      android:textColor="@color/standard_color_h3_dark"
      android:textSize="@dimen/standard_text_size_h3"
      />


  <!--<View-->
      <!--android:id="@+id/vDivider"-->
      <!--android:layout_marginLeft="@dimen/base_margin"-->
      <!--android:layout_marginRight="@dimen/base_margin"-->
      <!--style="@style/HorizontalLine"-->
      <!--/>-->



</LinearLayout>