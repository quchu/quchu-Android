<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_color_white"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/llStart"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginTop="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvAvatar"
        android:layout_width="@dimen/comment_users_avatar_size"
        android:layout_height="@dimen/comment_users_avatar_size"
        android:src="@mipmap/ic_launcher"
        fresco:roundAsCircle="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/base_margin"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tvUsername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="UserName"
          style="@style/TextView.H2"
          />

      <RatingBar
          android:id="@+id/rbRating"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:isIndicator="true"
          android:layout_marginTop="@dimen/quarter_margin"
          android:max="5"
          android:rating="3"
          android:stepSize="0.5"
          style="@style/StarProgressBar_Small"
          />

    </LinearLayout>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date"
        android:layout_gravity="top"
        style="@style/TextView.H3"
        />


  </LinearLayout>

  <LinearLayout
      android:id="@+id/llComments"
      android:layout_marginTop="@dimen/base_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="48dp"
      android:layout_below="@+id/llStart"
      android:layout_marginRight="@dimen/base_margin"
      android:background="@color/colorBackground"
      android:orientation="vertical"
      android:padding="@dimen/base_margin"

      >

    <TextView
        android:id="@+id/tvUserComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        tools:text="Comment"
        style="@style/TextView.H3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvImages"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/half_margin"
          android:layout_weight="0.4"
          tools:listitem="@layout/rc_item_image_message"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_weight="0.6"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:visibility="gone"
        tools:text="Comment"
        tools:visibility="visible"
        style="@style/TextView.H2"
        />

  </LinearLayout>

  <RelativeLayout
      android:id="@+id/bottom_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="48dp"
      android:layout_below="@id/llComments"
      android:layout_marginTop="@dimen/half_margin"
      android:layout_marginBottom="@dimen/base_margin"
      >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivFrom"
        android:layout_width="@dimen/comment_from_avatar_size"
        android:layout_height="@dimen/comment_from_avatar_size"
        />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_toRightOf="@id/ivFrom"
        tools:text="来自大众点评"
        android:layout_centerVertical="true"
        style="@style/TextView.H3"
        />
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_tiaozhuan"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_toRightOf="@+id/tvFrom"
        />

  </RelativeLayout>

  <View
      android:layout_marginLeft="@dimen/base_margin"
      android:layout_marginRight="@dimen/base_margin"
      style="@style/HorizontalLine"
      />

  <LinearLayout
      android:id="@+id/more_comments_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/bottom_layout"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/half_margin"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:visibility="gone"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_gengduopinglun"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/more_comments"
        style="@style/TextView.H2"
        />

  </LinearLayout>

</RelativeLayout>