<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_dialog_message_behavior"
              android:gravity="center_horizontal"
              android:orientation="vertical">

  <LinearLayout
      android:id="@+id/dialog_message_behavior_report"
      android:layout_width="90dp"
      android:layout_height="44dp"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_jubao"
        android:drawablePadding="@dimen/half_margin"
        android:gravity="center"
        android:text="举报"
        android:textColor="#111111"
        android:textSize="14sp"/>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginLeft="6dp"
      android:layout_marginRight="6dp"
      android:background="#e8e8e8"/>

  <LinearLayout
      android:id="@+id/dialog_message_behavior_shield"
      android:layout_width="90dp"
      android:layout_height="44dp"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/dialog_message_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_pingbi"
        android:drawablePadding="@dimen/half_margin"
        android:gravity="center"
        android:text="屏蔽"
        android:textColor="#111111"
        android:textSize="14sp"/>

  </LinearLayout>

</LinearLayout>
