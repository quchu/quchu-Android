<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appBackground</item>
        <item name="colorPrimaryDark">@color/appBackground</item>
        <item name="colorAccent">@color/planet_progress_yellow</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar_top" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 自定义style  -->

    <!-- 纵向分隔线 -->
    <style name="VerticalLine">
        <item name="android:layout_width">@dimen/line_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lineBackground_gray</item>
    </style>

    <style name="DetailVerticalLine">
        <item name="android:layout_width">@dimen/detail_horizontal_line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/detail_line_color</item>
    </style>
    <!-- 横向分隔线 -->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_thickness</item>
        <item name="android:background">@color/lineBackground_gray</item>
    </style>

    <style name="DetailHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:layout_height">@dimen/detail_horizontal_line_height</item>
        <item name="android:background">@color/detail_line_color</item>
    </style>

    <style name="AccountBHl" parent="HorizontalLine">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/user_login_text_hint_text_color</item>
    </style>

    <style name="QuchuRatingBarStyle" parent="android:Widget.RatingBar">
        <!--<item name="progressDrawable">@drawable/ratingbar_full</item>-->
        <!--<item name="indeterminateDrawable">@drawable/ratingbar_full</item>-->
        <item name="android:progressDrawable">@drawable/ratingbar_layer_list</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_layer_list</item>
    </style>

    <!-- ************* SwipeBackLayout ************ -->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


    <!-- 下拉菜单 设置界面 dialog style -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/in_top_to_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/out_bottom_to_top</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="DetailTextStyle_sub">
        <item name="textColor">@color/text_color_white</item>
        <item name="textSize">@dimen/word_subhead_size</item>
    </style>
    <!-- 详情界面 便利标签 radiobutton 风格 -->

    <style name="DetailRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/rb_detail_textcolor_seletcer</item>
        <item name="android:textSize">@dimen/word_size_time</item>
    </style>
</resources>
