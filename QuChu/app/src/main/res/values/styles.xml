<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base.CardView" parent="android:Widget">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 自定义style  -->

    <!-- 纵向分隔线 -->
    <style name="VerticalLine">
        <item name="android:layout_width">@dimen/line_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/standard_color_h3_dark</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">@dimen/horizontal_divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!-- 横向分隔线 -->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_thickness</item>
        <item name="android:background">@color/standard_color_h3_dark</item>
    </style>

    <!-- 横向分隔线 -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_divider</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="HorizontalDividerDark" parent="HorizontalDivider">
        <item name="android:background">@color/standard_color_h2_dark</item>
    </style>

    <style name="DetailHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:layout_height">@dimen/detail_horizontal_line_height</item>
        <item name="android:background">@color/standard_color_h3_dark</item>
    </style>

    <style name="AccountBHl" parent="HorizontalLine">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/user_login_text_hint_text_color</item>
    </style>

    <style name="NavigateBHl" parent="HorizontalLine">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:background">@color/user_login_view_bg_color</item>
    </style>


    <!-- 下拉菜单 设置界面 dialog style -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- 详情界面 便利标签 radiobutton 风格 -->


    <style name="BlurDialogFragment.Default.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/default_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/default_dialog_out</item>
    </style>
    <!--对话框-->
    <style name="dialog_two_button" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/standard_color_yellow</item>
        <item name="android:background">@color/appBackground</item>

    </style>


    <style name="ToolbarContainer">
        <item name="android:paddingLeft">@dimen/toolbar_container_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_container_horizontal_padding</item>
    </style>

    <style name="ToolbarItem">
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarItem.TextView" parent="ToolbarItem">
        <item name="android:textColor">@color/standard_color_h1_dark</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ToolbarItem.ActionTextView" parent="ToolbarItem.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="ToolbarItem.TitleTextView" parent="ToolbarItem.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextView.H0" parent="TextView">
        <item name="android:textSize">@dimen/standard_text_size_h0</item>
        <item name="android:textColor">@color/standard_color_h1_dark</item>
    </style>

    <style name="TextView.H1" parent="TextView">
        <item name="android:textSize">@dimen/standard_text_size_h1</item>
        <item name="android:textColor">@color/standard_color_h1_dark</item>
    </style>

    <style name="TextView.H2" parent="TextView">
        <item name="android:textSize">@dimen/standard_text_size_h2</item>
        <item name="android:textColor">@color/standard_color_h2_dark</item>
    </style>

    <style name="TextView.H3" parent="TextView">
        <item name="android:textSize">@dimen/standard_text_size_h3</item>
        <item name="android:textColor">@color/standard_color_h3_dark</item>
    </style>

    <style name="TextView.H5" parent="TextView">
        <item name="android:textSize">@dimen/standard_text_size_h5</item>
        <item name="android:textColor">@color/standard_color_h3_dark</item>
    </style>


    <style name="dialog_bottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_n_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="dialog_bottom_no_dim" parent="@style/dialog_bottom">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowBackground">@color/translucent_dark</item>
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hidden</item>
    </style>

    <dimen name="horizontal_divider">1px</dimen>

    <style name="CustomProgressBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
    </style>


    <style name="StarProgressBar_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_ratingbar_small_selector</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
    </style>


    <style name="CustomProgressBarLarge" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_larger_selector</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
    </style>
</resources>
